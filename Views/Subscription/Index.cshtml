// Plan configurations with features
const planConfigs = {
    '5000': {
        name: 'Starter Plan',
        icon: 'rocket_launch',
        features: [
            'Up to 300 students',
            'Basic Dashboard & Reporting',
            'Attendance & Grades Tracking',
