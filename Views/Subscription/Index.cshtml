            'Email Support',
            '7-Day Free Trial'
        ]
    },
    '15000': {
        name: 'Pro Plan',
        icon: 'stars',
        features: [
            'Up to 1,500 students',
            'Advanced Dashboard & Analytics',
            'AI-Assisted Insights',
            'Performance Prediction',
            'Priority Email Support',
            'Custom Reports & Export',
            '14-Day Free Trial'
        ]
    },
    '30000': {
        name: 'Enterprise Plan',
        icon: 'workspace_premium',
        features: [
            'Unlimited Students',
            'Full Dashboard, API & Reporting',
            'Advanced AI Analytics',
            'Custom Integrations',
            'Priority Phone & Email Support',
            'Dedicated Account Manager',
            '30-Day Free Trial'
        ]
    },
    'onetime': {
        name: 'Full System Purchase',
        icon: 'inventory',
        features: [
            'Complete Source Code Access',
            'Self-Hosted Solution',
            'Lifetime License',
            'No Monthly Fees',
            'Full Customization Rights',
            'Installation Support',
            '1 Year Technical Support'
        ]
    }
};

// Get plan from URL or default
const urlParams = new URLSearchParams(window.location.search);
const selectedPlan = urlParams.get('plan') || '5000';
const planConfig = planConfigs[selectedPlan] || planConfigs['5000'];

// Update plan display
document.getElementById('planNameElement').textContent = planConfig.name;
document.getElementById('planIconElement').textContent = planConfig.icon;

if (selectedPlan === 'onetime') {
    document.getElementById('planPriceElement').textContent = 'Contact Sales';
    document.querySelector('.plan-price small').textContent = 'for pricing';
} else {
    document.getElementById('planPriceElement').textContent = `KES ${parseInt(selectedPlan).toLocaleString()}`;
}

// Populate features
const featuresList = document.getElementById('planFeaturesList');
planConfig.features.forEach(feature => {
    const li = document.createElement('li');
    li.className = 'feature-item';
    li.innerHTML = `
        <div class="feature-icon">
            <span class="material-icons-round">check</span>
        </div>
        <div class="feature-text">${feature}</div>
    `;
    featuresList.appendChild(li);
});

// Update hidden input
document.getElementById('planAmountInput').value = selectedPlan;

