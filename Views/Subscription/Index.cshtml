    const schoolGenderSelect = document.querySelector('select[name="SchoolGender"]');
    
    if (!schoolGenderSelect) {
        console.log("[FORM] ERROR: Select element not found!");
        Swal.fire("Error", "School gender field not found in form", "error");
        return;
    }

    const schoolGender = schoolGenderSelect.value.trim();
    
    console.log("[FORM] School Gender select element:", schoolGenderSelect);
    console.log("[FORM] School Gender value:", schoolGender);
    console.log("[FORM] School Gender value length:", schoolGender.length);

    // Validate gender is selected
    if (!schoolGender || schoolGender === "") {
        console.log("[FORM] ERROR: School gender is empty");
        console.log("[FORM] Available options:", Array.from(schoolGenderSelect.options).map(o => ({ text: o.text, value: o.value })));
        Swal.fire("Error", "School gender is required - please select Boys Only, Girls Only, or Mixed", "error");
        return;
    }

    // Build grades array
    const grades = [];
    [...gradesContainer.children].forEach((gradeDiv, index) => {
        const name = gradeDiv.querySelector(".grade-name").value.trim();
        const term1 = parseInt(gradeDiv.querySelector(".term1-fee").value) || 0;
        const term2 = parseInt(gradeDiv.querySelector(".term2-fee").value) || 0;
        const term3 = parseInt(gradeDiv.querySelector(".term3-fee").value) || 0;
        const streamsInput = gradeDiv.querySelector(".grade-streams").value.trim();

        // Parse streams: "A, B, C" → ["A", "B", "C"]
        const streams = streamsInput
            ? streamsInput.split(",").map(s => s.trim()).filter(s => s.length > 0)
            : [];

        console.log(`[FORM] Grade ${index}:`, { name, term1, term2, term3, streams });

        if (name) {
            grades.push({
                name: name,
                fees: {
                    term1: term1,
                    term2: term2,
                    term3: term3
                },
                streams: streams
            });
        }
    });

    // Validate grades
    if (grades.length === 0) {
        console.log("[FORM] ERROR: No grades added");
        Swal.fire("Error", "Please add at least one grade", "error");
        return;
    }

    for (const grade of grades) {
        if (!grade.name || grade.name.length === 0) {
            console.log("[FORM] ERROR: Grade name is empty");
            Swal.fire("Error", "All grades must have a name", "error");
            return;
        }
        if (grade.fees.term1 <= 0 || grade.fees.term2 <= 0 || grade.fees.term3 <= 0) {
            console.log(`[FORM] ERROR: Grade "${grade.name}" has zero fees`);
            Swal.fire("Error", `Grade "${grade.name}" must have fees > 0 for all terms`, "error");
            return;
        }
    }

    // Build final request object (PascalCase to match C# model)
    const requestData = {
        SchoolName: formData.get("SchoolName"),
        AdminEmail: formData.get("AdminEmail"),
        Password: formData.get("Password"),
        SchoolGender: schoolGender,
        PlanAmount: parseFloat(formData.get("PlanAmount")) || 5000,
        Grades: grades
    };

    console.log("[FORM] Final request data:", requestData);

    Swal.fire({
        title: 'Processing...',
        html: 'Setting up your subscription',
        allowOutsideClick: false,
        didOpen: () => Swal.showLoading()
    });

    try {
        const res = await fetch("/subscribe", {
            method: "POST",
            headers: {
                "Content-Type": "application/json"
            },
            body: JSON.stringify(requestData)
        });

        const result = await res.json();
        console.log("[FORM] Server response:", result);
        Swal.close();

        if (!result.success) {
            console.log("[FORM] Server error:", result.message);
            Swal.fire("Error", result.message, "error");
            return;
        }

        Swal.fire({
            icon: 'success',
            title: 'Verification Email Sent',
            html: `A verification email has been sent to <strong>${requestData.AdminEmail}</strong>. Please check your inbox to complete the subscription.`,
            confirmButtonText: 'OK',
            allowOutsideClick: false
        }).then(() => {
            window.location.href = result.redirect || "/";
        });
    } catch (error) {
        Swal.close();
        console.error("[FORM] Fetch error:", error);
        Swal.fire("Error", "Something went wrong. Please try again.", "error");
    }
});
