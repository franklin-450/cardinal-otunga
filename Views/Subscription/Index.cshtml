// GRADE MANAGEMENT
// ===========================
const gradesContainer = document.getElementById("gradesContainer");
let gradeCount = 0;

document.getElementById("addGradeBtn").addEventListener('click', () => {
    const div = document.createElement("div");
    div.className = "grade-box";
    div.style.animation = "slideIn 0.5s forwards";
    div.innerHTML = `
        <button type="button" class="remove-grade">
            <span class="material-icons-round" style="font-size: 18px;">close</span>
        </button>
        <div class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Grade Name</label>
                <input class="form-control grade-name" placeholder="e.g., Grade 1" required>
            </div>
            <div class="col-md-2">
                <label class="form-label">Term 1 Fee</label>
                <input type="number" class="form-control term1-fee" placeholder="0" required>
            </div>
            <div class="col-md-2">
                <label class="form-label">Term 2 Fee</label>
                <input type="number" class="form-control term2-fee" placeholder="0" required>
            </div>
            <div class="col-md-2">
                <label class="form-label">Term 3 Fee</label>
                <input type="number" class="form-control term3-fee" placeholder="0" required>
            </div>
            <div class="col-md-3">
                <label class="form-label">Streams</label>
                <input class="form-control grade-streams" placeholder="A, B, C (optional)">
            </div>
        </div>`;
    
    gradesContainer.appendChild(div);
    gradeCount++;
    
    div.querySelector(".remove-grade").onclick = () => {
        div.style.animation = "slideIn 0.3s reverse";
        setTimeout(() => div.remove(), 300);
    };
});

