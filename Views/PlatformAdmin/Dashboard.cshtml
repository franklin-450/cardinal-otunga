@model IEnumerable<EduTrackTrial.Models.PlatformTenantViewModel>
@Html.AntiForgeryToken()


@{
    Layout = null;
    ViewData["Title"] = "Platform Control";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Platform Control - EduTrack</title>
    <meta name="robots" content="noindex, nofollow" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet">

    <style>
        :root {
            --bg: #0F172A;
            --surface: #1E293B;
            --border: #334155;
            --primary: #3B82F6;
            --success: #10B981;
            --warning: #F59E0B;
            --danger: #EF4444;
            --text-main: #F8FAFC;
            --text-muted: #94A3B8;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            background: var(--bg);
            color: var(--text-main);
            -webkit-font-smoothing: antialiased;
            min-height: 100vh;
        }

        .container {
            max-width: 1600px;
            margin: 0 auto;
            padding: 40px 24px;
        }

        /* Header */
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 40px;
            padding-bottom: 24px;
            border-bottom: 2px solid var(--border);
        }

        .header-left {
            display: flex;
            align-items: center;
            gap: 16px;
        }

        .header-icon {
            width: 56px;
            height: 56px;
            background: linear-gradient(135deg, var(--danger), #DC2626);
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 8px 24px rgba(239, 68, 68, 0.3);
        }

        .header-icon .material-icons-round {
            font-size: 32px;
            color: white;
        }

        .header-title h1 {
            font-size: 2rem;
            font-weight: 900;
            margin-bottom: 4px;
            letter-spacing: -0.5px;
        }

        .header-title p {
            color: var(--text-muted);
            font-size: 0.95rem;
        }

        .header-actions {
            display: flex;
            gap: 12px;
        }

        .btn-action {
            padding: 10px 20px;
            border: 2px solid var(--border);
            border-radius: 12px;
            background: var(--surface);
            color: var(--text-main);
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            gap: 8px;
            text-decoration: none;
        }

        .btn-action:hover {
            border-color: var(--primary);
            background: rgba(59, 130, 246, 0.1);
            transform: translateY(-2px);
        }

        /* Warning Banner */
        .warning-banner {
            background: linear-gradient(135deg, rgba(239, 68, 68, 0.15), rgba(220, 38, 38, 0.15));
            border: 2px solid var(--danger);
            border-radius: 16px;
            padding: 20px 24px;
            margin-bottom: 32px;
            display: flex;
            align-items: center;
            gap: 16px;
        }

        .warning-icon {
            width: 48px;
            height: 48px;
            background: var(--danger);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
        }

        .warning-icon .material-icons-round {
            font-size: 28px;
            color: white;
        }

        .warning-content h3 {
            font-size: 1.1rem;
            font-weight: 700;
            margin-bottom: 4px;
            color: #FCA5A5;
        }

        .warning-content p {
            font-size: 0.9rem;
            color: var(--text-muted);
            line-height: 1.5;
        }

        /* Stats Cards */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 20px;
            margin-bottom: 32px;
        }

        .stat-card {
            background: var(--surface);
            border: 2px solid var(--border);
            border-radius: 16px;
            padding: 24px;
            transition: all 0.3s;
        }

        .stat-card:hover {
            border-color: var(--primary);
            transform: translateY(-4px);
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
        }

        .stat-label {
            font-size: 0.85rem;
            color: var(--text-muted);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-weight: 600;
            margin-bottom: 8px;
        }

        .stat-value {
            font-size: 2.5rem;
            font-weight: 900;
            color: var(--text-main);
        }

        .stat-value.success { color: var(--success); }
        .stat-value.warning { color: var(--warning); }
        .stat-value.danger { color: var(--danger); }

        /* Search & Filter */
        .controls {
            display: flex;
            gap: 16px;
            margin-bottom: 24px;
            flex-wrap: wrap;
        }

        .search-box {
            flex: 1;
            min-width: 300px;
            position: relative;
        }

        .search-box input {
            width: 100%;
            padding: 12px 16px 12px 48px;
            background: var(--surface);
            border: 2px solid var(--border);
            border-radius: 12px;
            color: var(--text-main);
            font-size: 0.95rem;
            transition: all 0.3s;
        }

        .search-box input:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.1);
        }

        .search-box .material-icons-round {
            position: absolute;
            left: 16px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-muted);
        }

        .filter-select {
            padding: 12px 16px;
            background: var(--surface);
            border: 2px solid var(--border);
            border-radius: 12px;
            color: var(--text-main);
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
        }

        .filter-select:hover {
            border-color: var(--primary);
        }

        /* Table */
        .table-container {
            background: var(--surface);
            border: 2px solid var(--border);
            border-radius: 16px;
            overflow: hidden;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        thead {
            background: rgba(0, 0, 0, 0.3);
        }

        th {
            padding: 16px 20px;
            text-align: left;
            font-size: 0.8rem;
            font-weight: 700;
            color: var(--text-muted);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-bottom: 2px solid var(--border);
        }

        td {
            padding: 20px 20px;
            font-size: 0.9rem;
            border-bottom: 1px solid var(--border);
        }

        tbody tr {
            transition: all 0.2s;
        }

        tbody tr:hover {
            background: rgba(59, 130, 246, 0.05);
        }

        tbody tr:last-child td {
            border-bottom: none;
        }

        /* Status Badges */
        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 6px 12px;
            border-radius: 8px;
            font-size: 0.8rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .status-active {
            background: rgba(16, 185, 129, 0.15);
            color: var(--success);
        }

        .status-inactive {
            background: rgba(239, 68, 68, 0.15);
            color: var(--danger);
        }

        .status-badge .material-icons-round {
            font-size: 16px;
        }

        /* School Info */
        .school-info {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .school-avatar {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, var(--primary), var(--success));
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            color: white;
            flex-shrink: 0;
        }

        .school-details strong {
            display: block;
            font-weight: 600;
            margin-bottom: 2px;
        }

        .school-details span {
            font-size: 0.8rem;
            color: var(--text-muted);
        }

        /* Action Buttons */
        .action-buttons {
            display: flex;
            gap: 8px;
        }

        .btn {
            padding: 8px 14px;
            border: none;
            border-radius: 8px;
            font-size: 0.85rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }

        .btn-view {
            background: rgba(59, 130, 246, 0.15);
            color: var(--primary);
        }

        .btn-view:hover {
            background: var(--primary);
            color: white;
            transform: translateY(-2px);
        }

        .btn-disable {
            background: rgba(245, 158, 11, 0.15);
            color: var(--warning);
        }

        .btn-disable:hover {
            background: var(--warning);
            color: var(--bg);
            transform: translateY(-2px);
        }

        .btn-delete {
            background: rgba(239, 68, 68, 0.15);
            color: var(--danger);
        }

        .btn-delete:hover {
            background: var(--danger);
            color: white;
            transform: translateY(-2px);
        }

        /* Trial Badge */
        .trial-badge {
            display: inline-flex;
            align-items: center;
            gap: 4px;
            padding: 4px 8px;
            background: rgba(245, 158, 11, 0.15);
            color: var(--warning);
            border-radius: 6px;
            font-size: 0.75rem;
            font-weight: 600;
        }

        .trial-badge.expired {
            background: rgba(239, 68, 68, 0.15);
            color: var(--danger);
        }

        /* Footer */
        .footer {
            margin-top: 40px;
            padding-top: 24px;
            border-top: 2px solid var(--border);
            text-align: center;
            color: var(--text-muted);
            font-size: 0.85rem;
        }

        /* Responsive */
        @@media (max-width: 1200px) {
            .table-container {
                overflow-x: auto;
            }

            table {
                min-width: 1000px;
            }
        }

        @@media (max-width: 768px) {
            .container {
                padding: 24px 16px;
            }

            .header {
                flex-direction: column;
                align-items: flex-start;
                gap: 20px;
            }

            .header-title h1 {
                font-size: 1.5rem;
            }

            .stats-grid {
                grid-template-columns: 1fr;
            }

            .controls {
                flex-direction: column;
            }

            .search-box {
                min-width: 100%;
            }
        }
    </style>
</head>

<body>

<div class="container">
    <!-- Header -->
    <div class="header">
        <div class="header-left">
            <div class="header-icon">
                <span class="material-icons-round">admin_panel_settings</span>
            </div>
            <div class="header-title">
                <h1>Platform Control Panel</h1>
                <p>Manage all tenant schools and subscriptions</p>
            </div>
        </div>
        <div class="header-actions">
            <button class="btn-action" onclick="window.location.reload()">
                <span class="material-icons-round">refresh</span>
                Refresh
            </button>
            <a href="/admin/export" class="btn-action">
                <span class="material-icons-round">download</span>
                Export Data
            </a>
        </div>
    </div>

    <!-- Warning Banner -->
    <div class="warning-banner">
        <div class="warning-icon">
            <span class="material-icons-round">warning</span>
        </div>
        <div class="warning-content">
            <h3>‚ö†Ô∏è Restricted Access Zone</h3>
            <p>This interface directly controls tenant databases. All actions are logged and irreversible. Use with extreme caution.</p>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-label">Total Tenants</div>
            <div class="stat-value">@Model.Count()</div>
        </div>
        <div class="stat-card">
            <div class="stat-label">Active Schools</div>
            <div class="stat-value success">@Model.Count(t => t.Verified)</div>
        </div>
        <div class="stat-card">
            <div class="stat-label">Disabled</div>
            <div class="stat-value warning">@Model.Count(t => !t.Verified)</div>
        </div>
        <div class="stat-card">
            <div class="stat-label">Trial Expired</div>
            <div class="stat-value danger">@Model.Count(t => t.TrialEnds < DateTime.Now)</div>
        </div>
    </div>

    <!-- Search & Filter -->
    <div class="controls">
        <div class="search-box">
            <span class="material-icons-round">search</span>
            <input type="text" id="searchInput" placeholder="Search by school name, subdomain, or ID..." onkeyup="filterTable()" />
        </div>
        <select class="filter-select" id="statusFilter" onchange="filterTable()">
            <option value="all">All Status</option>
            <option value="active">Active Only</option>
            <option value="inactive">Disabled Only</option>
            <option value="expired">Trial Expired</option>
        </select>
    </div>

    <!-- Table -->
    <div class="table-container">
        <table id="tenantsTable">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>School Details</th>
                    <th>Subdomain</th>
                    <th>Status</th>
                    <th>Trial Status</th>
                    <th>Created</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var t in Model)
            {
                var isExpired = t.TrialEnds < DateTime.Now;
                var daysLeft = (t.TrialEnds - DateTime.Now).Days;
                
                <tr data-status="@(t.Verified ? "active" : "inactive")" data-expired="@isExpired">
                    <td><strong>#@t.Id</strong></td>
                    <td>
                        <div class="school-info">
                            <div class="school-avatar">@t.Name.Substring(0, 1).ToUpper()</div>
                            <div class="school-details">
                                <strong>@t.Name</strong>
                                <span>@t.Email</span>

                            </div>
                        </div>
                    </td>
                    <td>
                        <code style="background: rgba(59,130,246,0.1); padding: 4px 8px; border-radius: 6px; color: var(--primary); font-weight: 600;">
                            @($"{t.Subdomain}.edutrack.com")
                        </code>
                    </td>
                    <td>
                        @if (t.Verified)
                        {
                            <span class="status-badge status-active">
                                <span class="material-icons-round">check_circle</span>
                                Active
                            </span>
                        }
                        else
                        {
                            <span class="status-badge status-inactive">
                                <span class="material-icons-round">cancel</span>
                                Disabled
                            </span>
                        }
                    </td>
                    <td>
                        @if (isExpired)
                        {
                            <span class="trial-badge expired">
                                <span class="material-icons-round">event_busy</span>
                                Expired @Math.Abs(daysLeft) days ago
                            </span>
                        }
                        else
                        {
                            <span class="trial-badge">
                                <span class="material-icons-round">schedule</span>
                                @daysLeft days left
                            </span>
                        }
                    </td>
                    <td>@t.CreatedAt.ToString("MMM dd, yyyy")</td>
                    <td>
                        <div class="action-buttons">
                            <button class="btn btn-view" onclick="viewTenant(@t.Id)">
                                <span class="material-icons-round">visibility</span>
                                View
                            </button>
                            
                            <form method="post" 
                                  action="@Url.Action("DisableTenant", "PlatformAdmin", new { id = t.Id })" 
                                  style="display:inline"
                                  onsubmit="return confirmAction('disable', '@t.Name')">
                                <button type="submit" class="btn btn-disable">
                                    <span class="material-icons-round">block</span>
                                    Disable
                                </button>
                            </form>

<button class="btn btn-delete" data-id="@t.Id" data-name="@t.Name" onclick="deleteTenant(this)">
    <span class="material-icons-round">delete_forever</span>
    Delete
</button>

                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>

    <!-- Footer -->
    <div class="footer">
        <p><strong>EduTrack Platform Control</strong> ‚Ä¢ Internal Administration System</p>
        <p style="margin-top: 8px; font-size: 0.75rem;">All actions are logged. Last updated: @DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")</p>
    </div>
</div>

<script>
    // Search and Filter
    function filterTable() {
        const searchValue = document.getElementById('searchInput').value.toLowerCase();
        const statusFilter = document.getElementById('statusFilter').value;
        const rows = document.querySelectorAll('#tenantsTable tbody tr');

        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            const status = row.getAttribute('data-status');
            const expired = row.getAttribute('data-expired') === 'True';

            let matchSearch = text.includes(searchValue);
            let matchStatus = true;

            if (statusFilter === 'active') matchStatus = status === 'active';
            else if (statusFilter === 'inactive') matchStatus = status === 'inactive';
            else if (statusFilter === 'expired') matchStatus = expired;

            row.style.display = (matchSearch && matchStatus) ? '' : 'none';
        });
    }
function deleteTenant(btn) {
    const tenantId = btn.getAttribute('data-id');
    const tenantName = btn.getAttribute('data-name');

    // Use confirmDelete() to type school name
    if (!confirmDelete(tenantName)) return;

    const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

    fetch('@Url.Action("DeleteTenant", "PlatformAdmin", new { id = "REPLACE_ID" })'.replace("REPLACE_ID", tenantId), {
        method: 'POST',
        headers: {
            'RequestVerificationToken': token
        }
    })
    .then(res => res.json())
    .then(data => {
        if (data.success) {
            const row = document.getElementById(`tenant-row-${tenantId}`);
            if (row) {
                row.style.transition = "opacity 0.3s";
                row.style.opacity = 0;
                setTimeout(() => row.remove(), 300);
            }
        } else {
            alert('Error deleting tenant.');
        }
    })
    .catch(err => {
        console.error(err);
        alert('Error deleting tenant.');
    });
}


    // View Tenant
    function viewTenant(id) {
        window.location.href = `/admin/tenant/${id}`;
    }

    // Confirm Actions
    function confirmAction(action, schoolName) {
        return confirm(`‚ö†Ô∏è ${action.toUpperCase()} Tenant?\n\nSchool: ${schoolName}\n\nThis will ${action} all access for this school. Continue?`);
    }

    function confirmDelete(schoolName) {
        const confirmed = confirm(`üö® PERMANENT DELETE CONFIRMATION\n\nSchool: ${schoolName}\n\nThis will:\n‚Ä¢ Delete ALL student data\n‚Ä¢ Delete ALL financial records\n‚Ä¢ Remove database permanently\n\nType the school name to confirm:`);
        
        if (!confirmed) return false;
        
        const typed = prompt(`Type "${schoolName}" to confirm deletion:`);
        return typed === schoolName;
    }
</script>

</body>
</html>