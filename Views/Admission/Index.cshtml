// ========================================
function editStudent(studentId) {
    const student = allStudents.find(s => s.id === studentId);
    if (!student) return;

    currentStudent = student;
    document.getElementById('editName').value = student.fullName;
    document.getElementById('editGrade').value = student.grade;
    document.getElementById('editStream').value = student.stream || '';
    document.getElementById('editStatus').value = student.status;
    
    document.getElementById('editModal').classList.add('active');
}

function closeEditModal() {
    document.getElementById('editModal').classList.remove('active');
}

document.getElementById('editForm')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    if (!currentStudent) return;

    try {
        const response = await fetchWithCsrf(`/${schoolName}/admission/api/students/${currentStudent.id}`, {
            method: 'PUT',
            body: JSON.stringify({
                fullName: document.getElementById('editName').value,
                dateOfBirth: currentStudent.dateOfBirth,
                gender: currentStudent.gender,
                grade: document.getElementById('editGrade').value,
                stream: document.getElementById('editStream').value,
                previousSchool: currentStudent.previousSchool,
                medicalInfo: currentStudent.medicalInfo,
                guardianName: currentStudent.guardianName,
                guardianRelationship: currentStudent.guardianRelationship,
                guardianPhone: currentStudent.guardianPhone,
                guardianEmail: currentStudent.guardianEmail
            })
        });

        const data = await response.json();
        
        if (data.success) {
            showToast('Student updated successfully');
            closeEditModal();
            loadStudents();
        } else {
            showToast('Failed to update student', 'error');
        }
    } catch (error) {
        console.error('Error updating student:', error);
        showToast('Error updating student', 'error');
    }
});

