function populateConfigFilters() {
    if (!admissionConfig) return;

    const gradeFilter = document.getElementById('gradeFilter');
    const streamFilter = document.getElementById('streamFilter');

    // Clear existing options (keep the "All" option)
    while (gradeFilter.children.length > 1) {
        gradeFilter.removeChild(gradeFilter.lastChild);
    }
    while (streamFilter.children.length > 1) {
        streamFilter.removeChild(streamFilter.lastChild);
    }

    // Add grades from config
    if (admissionConfig.grades && admissionConfig.grades.length > 0) {
        admissionConfig.grades.forEach(grade => {
            const option = document.createElement('option');
            option.value = grade.name;
            option.textContent = grade.name;
            gradeFilter.appendChild(option);
        });
    }

    // Add streams from config
    if (admissionConfig.streams && admissionConfig.streams.length > 0) {
        admissionConfig.streams.forEach(stream => {
            if (stream !== 'NON') {
                const option = document.createElement('option');
                option.value = stream;
                option.textContent = stream;
                streamFilter.appendChild(option);
            }
        });
    }
}

