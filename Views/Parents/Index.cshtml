            const blob = new Blob([receiptHTML], { type: 'text/html' });
            const url = URL.createObjectURL(blob);
            const link = document.createElement('a');
            link.setAttribute('href', url);
            link.setAttribute('download', `receipt_${currentStudent.accountNo}_${Date.now()}.html`);
            link.style.display = 'none';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            URL.revokeObjectURL(url);
        }

        document.getElementById('studentModalBackdrop').addEventListener('click', function(e) {
            if (e.target === this) closeStudentModal();
        });

        document.getElementById('paymentModalBackdrop').addEventListener('click', function(e) {
            if (e.target === this) closePaymentModal();
        });
    </script>
</body>
</html>