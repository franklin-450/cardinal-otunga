        <h1>Payment Receipt</h1>
        <div class="receipt-item">
            <span>Transaction ID:</span>
            <strong>${document.getElementById('receiptTransactionId').textContent}</strong>
        </div>
        <div class="receipt-item">
            <span>Student Name:</span>
            <strong>${document.getElementById('receiptStudentName').textContent}</strong>
        </div>
        <div class="receipt-item">
            <span>Date & Time:</span>
            <strong>${document.getElementById('receiptDateTime').textContent}</strong>
        </div>
        <div class="receipt-item">
            <span>Payment Method:</span>
            <strong>M-Pesa</strong>
        </div>
        <div class="receipt-item">
            <span>Reference:</span>
            <strong>${document.getElementById('receiptReference').textContent}</strong>
        </div>
        <div class="receipt-item total">
            <span>Amount Paid:</span>
            <span>${document.getElementById('receiptAmount').textContent}</span>
        </div>
        <div class="footer">
            <p>Thank you for your payment!</p>
