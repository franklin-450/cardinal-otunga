@{
    Layout = null;
    var schoolName = "Cardinal Otunga High School Mosocho";
    var schoolMotto = "Use Common Sense";
    var schoolColors = new { primary = "#8B1538", secondary = "#FFD700" }; // Maroon and Gold
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Parents Portal | @schoolName</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.7/signalr.min.js" crossorigin="anonymous"></script>
    <style>
        :root {
            --bg: #F8F4F1;
            --surface: #FFFFFF;
            --border: #E5D4C1;
            --primary: #8B1538;
            --primary-hover: #6B0F2A;
            --primary-soft: #F5E8EC;
            --secondary: #FFD700;
            --secondary-hover: #E6C200;
            --secondary-soft: #FFF9E6;
            --success: #10B981;
            --success-soft: #D1FAE5;
            --warning: #F59E0B;
            --warning-soft: #FEF3C7;
            --danger: #EF4444;
            --danger-soft: #FEE2E2;
            --text-main: #2C1810;
            --text-muted: #6B5847;
        }
        
        * { box-sizing: border-box; margin: 0; padding: 0; }
        
        body {
            font-family: 'Inter', sans-serif;
            color: var(--text-main);
            -webkit-font-smoothing: antialiased;
            background: var(--bg);
        }
        
        .navbar {
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-hover) 100%);
            padding: 20px 24px;
            box-shadow: 0 4px 12px rgba(139, 21, 56, 0.3);
            position: sticky;
            top: 0;
            z-index: 100;
            border-bottom: 3px solid var(--secondary);
        }
        
        .navbar-content {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .navbar-logo {
            display: flex;
            align-items: center;
            gap: 14px;
            font-size: 1.3rem;
            font-weight: 900;
            color: white;
        }
        
        .navbar-logo span {
            font-size: 36px;
            color: var(--secondary);
            text-shadow: 0 2px 8px rgba(0,0,0,0.3);
        }
        
        .navbar-title {
            font-size: 0.7rem;
            color: var(--secondary);
            text-transform: uppercase;
            font-weight: 700;
            letter-spacing: 2px;
            margin-top: 4px;
        }
        
        .navbar-motto {
            font-size: 0.85rem;
            color: rgba(255, 215, 0, 0.9);
            font-style: italic;
            font-weight: 500;
        }
        
        .navbar-links {
            display: flex;
            gap: 20px;
            align-items: center;
        }
        
        .navbar-links a {
            color: white;
            text-decoration: none;
            font-weight: 600;
            font-size: 0.9rem;
            transition: all 0.3s;
            padding: 8px 14px;
            border-radius: 8px;
        }
        
        .navbar-links a:hover {
            background: rgba(255, 215, 0, 0.2);
            color: var(--secondary);
            transform: translateY(-2px);
        }
        
        .back-home {
            display: flex;
            align-items: center;
            gap: 6px;
            background: var(--secondary);
            color: var(--primary);
            padding: 10px 18px;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s;
            font-weight: 700;
            box-shadow: 0 4px 12px rgba(255, 215, 0, 0.4);
        }
        
        .back-home:hover {
            background: var(--secondary-hover);
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(255, 215, 0, 0.5);
        }
        
        .hero {
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-hover) 50%, #5A0F23 100%);
            background-attachment: fixed;
            min-height: 320px;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow: hidden;
            border-bottom: 5px solid var(--secondary);
        }
        
        .hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%23FFD700" fill-opacity="0.08"%3E%3Cpath d="M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');
            opacity: 0.5;
            animation: float 20s infinite linear;
        }
        
        @@keyframes float {
            0% { transform: translate(0, 0); }
            100% { transform: translate(60px, 60px); }
        }
        
        .hero-content {
            text-align: center;
            color: white;
            position: relative;
            z-index: 1;
        }
        
        .hero-icon {
            width: 90px;
            height: 90px;
            background: linear-gradient(135deg, var(--secondary), var(--secondary-hover));
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 24px;
            font-size: 46px;
            color: var(--primary);
            box-shadow: 0 8px 32px rgba(255, 215, 0, 0.4);
            backdrop-filter: blur(10px);
            border: 3px solid rgba(255, 215, 0, 0.3);
        }
        
        .hero-content h1 {
            font-size: 2.8rem;
            font-weight: 900;
            margin-bottom: 8px;
            text-shadow: 0 4px 12px rgba(0,0,0,0.4);
            color: white;
        }
        
        .hero-content .motto {
            font-size: 1.2rem;
            opacity: 0.95;
            text-shadow: 0 2px 8px rgba(0,0,0,0.3);
            color: var(--secondary);
            font-style: italic;
            font-weight: 600;
            margin-bottom: 12px;
        }
        
        .hero-content p {
            font-size: 1rem;
            opacity: 0.9;
            text-shadow: 0 1px 4px rgba(0,0,0,0.2);
        }
        
        .main-container {
            max-width: 500px;
            margin: -60px auto 0;
            padding: 0 20px 40px;
            position: relative;
            z-index: 10;
        }
        
        .page {
            display: none;
            animation: fadeIn 0.3s ease;
        }
        
        .page.active {
            display: block;
        }
        
        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .login-card {
            background: var(--surface);
            border-radius: 24px;
            padding: 40px 28px;
            box-shadow: 0 20px 60px rgba(139, 21, 56, 0.25);
            border: 3px solid var(--border);
        }
        
        .login-header {
            text-align: center;
            margin-bottom: 28px;
        }
        
        .login-header h2 {
            font-size: 1.6rem;
            font-weight: 900;
            margin-bottom: 8px;
            color: var(--primary);
        }
        
        .login-header p {
            color: var(--text-muted);
            font-size: 0.95rem;
        }
        
        .form-group {
            margin-bottom: 20px;
        }
        
        .form-group label {
            display: block;
            font-weight: 600;
            margin-bottom: 8px;
            color: var(--text-main);
            font-size: 0.9rem;
        }
        
        .form-group input {
            width: 100%;
            padding: 12px 16px;
            border: 2px solid var(--border);
            border-radius: 12px;
            font-size: 0.95rem;
            font-family: 'Inter', sans-serif;
            transition: all 0.3s;
        }
        
        .form-group input:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 4px rgba(139, 21, 56, 0.1);
        }
        
        .login-btn {
            width: 100%;
            background: linear-gradient(135deg, var(--primary), var(--primary-hover));
            color: white;
            padding: 14px;
            border: none;
            border-radius: 12px;
            font-weight: 700;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.3s;
            box-shadow: 0 8px 20px rgba(139, 21, 56, 0.3);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }
        
        .login-btn:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 12px 28px rgba(139, 21, 56, 0.4);
        }
        
        .login-btn:disabled {
            opacity: 0.7;
            cursor: not-allowed;
        }
        
        .error-message {
            background: var(--danger-soft);
            border: 2px solid var(--danger);
            color: var(--danger);
            padding: 12px 16px;
            border-radius: 10px;
            margin-bottom: 16px;
            font-size: 0.9rem;
            display: none;
            align-items: center;
            gap: 10px;
        }
        
        .error-message.show {
            display: flex;
        }
        
        .modal-backdrop {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(44, 24, 16, 0.8);
            display: none;
            align-items: center;
            justify-content: center;
            z-index: 9999;
            backdrop-filter: blur(4px);
            padding: 20px;
            overflow-y: auto;
        }
        
        .modal-backdrop.active {
            display: flex;
        }
        
        .modal-card {
            background: var(--surface);
            border-radius: 24px;
            padding: 32px;
            max-width: 500px;
            width: 100%;
            box-shadow: 0 20px 60px rgba(139, 21, 56, 0.4);
            animation: scaleIn 0.3s ease;
            border: 3px solid var(--secondary);
        }
        
        @@keyframes scaleIn {
            from { opacity: 0; transform: scale(0.95); }
            to { opacity: 1; transform: scale(1); }
        }
        
        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 24px;
            border-bottom: 3px solid var(--border);
            padding-bottom: 16px;
        }
        
        .modal-header h2 {
            font-size: 1.5rem;
            font-weight: 800;
            color: var(--primary);
        }
        
        .close-btn {
            background: none;
            border: none;
            cursor: pointer;
            font-size: 28px;
            color: var(--text-muted);
            transition: all 0.3s;
        }
        
        .close-btn:hover {
            color: var(--primary);
            transform: rotate(90deg);
        }
        
        .student-header {
            display: flex;
            gap: 20px;
            margin-bottom: 24px;
            padding-bottom: 24px;
            border-bottom: 2px solid var(--border);
        }
        
        .student-photo {
            width: 120px;
            height: 120px;
            border-radius: 16px;
            object-fit: cover;
            box-shadow: 0 8px 24px rgba(139, 21, 56, 0.2);
            border: 3px solid var(--secondary);
        }
        
        .student-info h3 {
            font-size: 1.4rem;
            font-weight: 800;
            margin-bottom: 4px;
            color: var(--primary);
        }
        
        .student-info p {
            color: var(--text-muted);
            font-size: 0.9rem;
            margin-bottom: 8px;
        }
        
        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 16px;
            margin-bottom: 24px;
        }
        
        .info-card {
            background: var(--bg);
            padding: 16px;
            border-radius: 12px;
            border: 2px solid var(--border);
        }
        
        .info-card label {
            font-weight: 600;
            font-size: 0.8rem;
            color: var(--text-muted);
            text-transform: uppercase;
            display: block;
            margin-bottom: 6px;
        }
        
        .info-card .value {
            font-size: 1.2rem;
            font-weight: 700;
            color: var(--text-main);
        }
        
        .fee-section {
            background: linear-gradient(135deg, var(--primary-soft), #FFF5F8);
            padding: 20px;
            border-radius: 16px;
            margin-bottom: 24px;
            border: 3px solid var(--primary);
        }
        
        .fee-section h4 {
            font-size: 0.9rem;
            color: var(--primary);
            font-weight: 700;
            margin-bottom: 8px;
            text-transform: uppercase;
        }
        
        .fee-amount {
            font-size: 2rem;
            font-weight: 900;
            color: var(--primary);
            margin-bottom: 12px;
        }
        
        .fee-breakdown {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 12px;
            font-size: 0.85rem;
            margin-bottom: 12px;
        }
        
        .fee-item {
            display: flex;
            justify-content: space-between;
        }
        
        .fee-item label {
            color: var(--text-muted);
        }
        
        .fee-item .amount {
            font-weight: 600;
            color: var(--text-main);
        }
        
        .modal-actions {
            display: flex;
            gap: 12px;
            margin-top: 24px;
        }
        
        .btn {
            padding: 12px 24px;
            border: none;
            border-radius: 12px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s;
            font-size: 0.95rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            flex: 1;
        }
        
        .btn-primary {
            background: linear-gradient(135deg, var(--primary), var(--primary-hover));
            color: white;
            box-shadow: 0 8px 20px rgba(139, 21, 56, 0.3);
        }
        
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 28px rgba(139, 21, 56, 0.4);
        }
        
        .btn-secondary {
            background: var(--border);
            color: var(--text-main);
        }
        
        .btn-secondary:hover {
            background: var(--primary-soft);
            color: var(--primary);
        }
        
        .btn-light {
            background: var(--bg);
            color: var(--text-main);
            border: 2px solid var(--border);
        }
        
        .btn-light:hover {
            background: var(--primary-soft);
            border-color: var(--primary);
        }
        
        .payment-form {
            display: grid;
            gap: 16px;
            margin-bottom: 24px;
        }
        
        .success-state {
            text-align: center;
            padding: 40px 20px;
        }
        
        .success-icon {
            width: 100px;
            height: 100px;
            background: var(--success-soft);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
            font-size: 56px;
            color: var(--success);
        }
        
        .success-state h3 {
            font-size: 1.6rem;
            font-weight: 800;
            color: var(--success);
            margin-bottom: 8px;
        }
        
        .success-state p {
            color: var(--text-muted);
            margin-bottom: 16px;
            font-size: 0.95rem;
        }
        
        .receipt-details {
            background: var(--bg);
            padding: 20px;
            border-radius: 12px;
            text-align: left;
            margin-bottom: 24px;
            border: 2px solid var(--border);
        }
        
        .receipt-item {
            display: flex;
            justify-content: space-between;
            padding: 8px 0;
            border-bottom: 1px solid var(--border);
            font-size: 0.9rem;
        }
        
        .receipt-item:last-child {
            border-bottom: none;
        }
        
        .receipt-item.total {
            border-top: 2px solid var(--border);
            padding-top: 12px;
            font-weight: 700;
            color: var(--success);
        }
        
        .download-btn {
            width: 100%;
            background: linear-gradient(135deg, var(--success), #14B8A6);
            color: white;
            padding: 14px;
            border: none;
            border-radius: 12px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }
        
        .download-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(16,185,129,0.3);
        }
        
        @@media (max-width: 768px) {
            .navbar-links { display: none; }
            .hero { min-height: 240px; }
            .hero-content h1 { font-size: 2rem; }
            .main-container { margin-top: -40px; }
            .login-card { padding: 28px 20px; }
            .modal-card { padding: 20px; }
            .student-header { flex-direction: column; align-items: center; text-align: center; }
            .student-photo { width: 100px; height: 100px; }
            .info-grid { grid-template-columns: 1fr; }
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <div class="navbar-content">
            <div class="navbar-logo">
                <span class="material-icons-round">school</span>
                <div>
                    <div>@schoolName</div>
                    <div class="navbar-title">Parents Portal</div>
                    <div class="navbar-motto">"@schoolMotto"</div>
                </div>
            </div>
            <div class="navbar-links">
                <a href="/">Home</a>
                <a href="/about">About</a>
                <a href="/contact">Contact</a>
                <div class="back-home" onclick="goHome()">
                    <span class="material-icons-round">home</span>
                    Home
                </div>
            </div>
        </div>
    </nav>

    <div class="hero">
        <div class="hero-content">
            <div class="hero-icon">
                <span class="material-icons-round">family_restroom</span>
            </div>
            <h1>Parents Portal</h1>
            <p class="motto">@schoolMotto</p>
            <p>Manage your child's school fees and track their progress</p>
        </div>
    </div>

    <div class="main-container">
        <div class="page active" id="loginPage">
            <div class="login-card">
                <div class="login-header">
                    <h2>Access Portal</h2>
                    <p>Enter your student's details to continue</p>
                </div>
                <div class="error-message" id="loginError">
                    <span class="material-icons-round">error</span>
                    <span id="loginErrorText"></span>
                </div>
                <form id="loginForm" onsubmit="handleLogin(event)">
                    <div class="form-group">
                        <label for="accountNo">Student Account Number</label>
                        <input type="text" id="accountNo" name="accountNo" placeholder="e.g., 1234567" required />
                    </div>
                    <div class="form-group">
                        <label for="studentName">Student Full Name</label>
                        <input type="text" id="studentName" name="studentName" placeholder="Enter student's name" required />
                    </div>
                    <button type="submit" class="login-btn">
                        <span class="material-icons-round">login</span>
                        Access Portal
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="modal-backdrop" id="studentModalBackdrop">
        <div class="modal-card">
            <div class="modal-header">
                <h2>Student Details</h2>
                <button class="close-btn" onclick="closeStudentModal()">✕</button>
            </div>

            <div class="student-header">
                <img id="studentPhoto" src="https://via.placeholder.com/120" alt="Student Photo" class="student-photo">
                <div class="student-info">
                    <h3 id="studentFullName"></h3>
                    <p><strong>Account No:</strong> <span id="studentAccNo"></span></p>
                    <p><strong>Grade:</strong> <span id="studentGrade"></span></p>
                    <p><strong>Gender:</strong> <span id="studentGender"></span></p>
                    <p><strong>Status:</strong> <span id="studentStatus"></span></p>
                </div>
            </div>

            <div class="info-grid">
                <div class="info-card">
                    <label>Date of Birth</label>
                    <div class="value" id="studentDOB">-</div>
                </div>
                <div class="info-card">
                    <label>Stream</label>
                    <div class="value" id="studentStream">-</div>
                </div>
                <div class="info-card">
                    <label>Admission Date</label>
                    <div class="value" id="studentAdmissionDate">-</div>
                </div>
                <div class="info-card">
                    <label>Previous School</label>
                    <div class="value" id="studentPrevSchool">-</div>
                </div>
            </div>

            <div class="fee-section">
                <h4>Fee Balance</h4>
                <div class="fee-amount" id="feeBalance">KSH 0</div>
                <div class="fee-breakdown">
                    <div class="fee-item">
                        <label>Total Due:</label>
                        <span class="amount" id="feeTotalDue">KSH 0</span>
                    </div>
                    <div class="fee-item">
                        <label>Amount Paid:</label>
                        <span class="amount" id="feeAmountPaid">KSH 0</span>
                    </div>
                    <div class="fee-item">
                        <label>Term 1:</label>
                        <span class="amount" id="feeTerm1">KSH 0</span>
                    </div>
                    <div class="fee-item">
                        <label>Term 2:</label>
                        <span class="amount" id="feeTerm2">KSH 0</span>
                    </div>
                </div>
            </div>

            <div id="notificationsSection" style="margin-bottom: 18px;">
                <label style="font-weight: 700; display: block; margin-bottom: 8px;">Notifications & Progress</label>
                <div id="notificationsList" style="background: #fff; border: 2px solid var(--border); padding: 12px; border-radius: 10px; max-height: 220px; overflow-y: auto;">
                    <div id="notificationsEmpty" style="color: var(--text-muted);">No notifications yet.</div>
                </div>
                <div style="margin-top: 8px; display: flex; gap: 8px;">
                    <button id="markAllReadBtn" class="btn btn-light" onclick="markAllNotificationsRead()" style="padding:8px 12px;">Mark all read</button>
                    <button id="refreshNotificationsBtn" class="btn btn-light" onclick="refreshNotifications()" style="padding:8px 12px;">Refresh</button>
                </div>
            </div>

            <div id="medicalInfoSection" style="display: none; margin-bottom: 24px; background: var(--primary-soft); padding: 16px; border-radius: 12px; border: 2px solid var(--primary);">
                <label style="font-weight: 700; color: var(--primary); display: block; margin-bottom: 8px;">Medical Information</label>
                <p id="studentMedicalInfo" style="color: var(--text-muted); font-size: 0.9rem;"></p>
            </div>

            <div class="modal-actions">
                <button class="btn btn-primary" onclick="openPaymentModal()">
                    <span class="material-icons-round">payment</span>
                    Pay Fees
                </button>
                <button class="btn btn-secondary" onclick="closeStudentModal()">
                    <span class="material-icons-round">close</span>
                    Close
                </button>
            </div>
        </div>
    </div>

    <div class="modal-backdrop" id="paymentModalBackdrop">
        <div class="modal-card">
            <div class="modal-header">
                <h2>Pay Student Fees</h2>
                <button class="close-btn" onclick="closePaymentModal()">✕</button>
            </div>

            <div id="paymentFormState">
                <form id="paymentForm" onsubmit="handlePayment(event)" class="payment-form">
                    <div class="form-group">
                        <label for="paymentAccountNo">Student Account Number</label>
                        <input type="text" id="paymentAccountNo" readonly>
                    </div>
                    <div class="form-group">
                        <label for="paymentAmount">Amount to Pay (KSH)</label>
                        <input type="number" id="paymentAmount" name="amount" placeholder="Enter amount" min="1" required />
                    </div>
                    <div class="form-group">
                        <label for="paymentPhone">Parent Phone Number</label>
                        <input type="tel" id="paymentPhone" name="phone" placeholder="+254 7XX XXX XXX" required />
                    </div>
                    <button type="submit" class="login-btn">
                        <span class="material-icons-round">payment</span>
                        Proceed to Payment
                    </button>
                </form>
            </div>

            <div id="paymentSuccessState" style="display: none;">
                <div class="success-state">
                    <div class="success-icon">✓</div>
                    <h3>Payment Initiated</h3>
                    <p>Check your phone for the Mpesa prompt</p>
                    <p style="font-size: 0.85rem; color: var(--text-muted); margin-top: 12px;">
                        Transaction ID: <strong id="paymentTransactionId">-</strong>
                    </p>
                </div>
                <div class="receipt-details">
                    <div class="receipt-item">
                        <label>Amount:</label>
                        <span id="receiptAmount">KSH 0</span>
                    </div>
                    <div class="receipt-item">
                        <label>Student:</label>
                        <span id="receiptStudent">-</span>
                    </div>
                    <div class="receipt-item">
                        <label>School:</label>
                        <span>Cardinal Otunga High School</span>
                    </div>
                    <div class="receipt-item">
                        <label>Date:</label>
                        <span id="receiptDate">-</span>
                    </div>
                </div>
                <button class="download-btn" onclick="downloadReceipt()">
                    <span class="material-icons-round">download</span>
                    Download Receipt
                </button>
                <div style="margin-top: 16px;">
                    <button class="btn btn-secondary" onclick="closePaymentModal()" style="width: 100%;">
                        <span class="material-icons-round">close</span>
                        Done
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script>
        let currentStudent = null;
        let connection = null;

        // Initialize SignalR connection for real-time notifications
        function initializeSignalR() {
            if (!currentStudent) return;
            
            connection = new signalR.HubConnectionBuilder()
                .withUrl("/notificationHub")
                .withAutomaticReconnect()
                .build();

            connection.on("ReceiveNotification", (accountNo, message) => {
                if (accountNo === currentStudent.accountNo) {
                    refreshNotifications();
                }
            });

            connection.start().catch(err => console.log('SignalR connection error:', err));
        }

        async function handleLogin(event) {
            event.preventDefault();
            
            const accountNo = document.getElementById('accountNo').value.trim();
            const studentName = document.getElementById('studentName').value.trim();
            const errorElement = document.getElementById('loginError');
            const loginBtn = document.querySelector('.login-btn');
            
            try {
                loginBtn.disabled = true;
                loginBtn.innerHTML = '<span class="material-icons-round">hourglass_bottom</span> Verifying...';
                
                // Fetch student data from backend
                const response = await fetch('/Parents/GetStudent', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        accountNumber: accountNo,
                        studentName: studentName
                    })
                });

                if (!response.ok) {
                    const errorData = await response.json();
                    errorElement.classList.add('show');
                    document.getElementById('loginErrorText').textContent = errorData.message || 'Login failed. Please try again.';
                    return;
                }

                const student = await response.json();
                errorElement.classList.remove('show');
                currentStudent = { accountNo: accountNo, ...student };
                
                // Load student details and show modal
                loadStudentDetails(currentStudent);
                showStudentModal();
                initializeSignalR();
            } catch (error) {
                console.error('Login error:', error);
                errorElement.classList.add('show');
                document.getElementById('loginErrorText').textContent = 'Connection error. Please check your internet and try again.';
            } finally {
                loginBtn.disabled = false;
                loginBtn.innerHTML = '<span class="material-icons-round">login</span> Access Portal';
            }
        }

        function loadStudentDetails(student) {
            document.getElementById('studentFullName').textContent = student.fullName;
            document.getElementById('studentAccNo').textContent = student.accountNo;
            document.getElementById('studentGrade').textContent = student.grade;
            document.getElementById('studentGender').textContent = student.gender;
            document.getElementById('studentStatus').textContent = student.status;
            document.getElementById('studentDOB').textContent = formatDate(student.dob);
            document.getElementById('studentStream').textContent = student.stream;
            document.getElementById('studentAdmissionDate').textContent = formatDate(student.admissionDate);
            document.getElementById('studentPrevSchool').textContent = student.previousSchool;
            document.getElementById('studentPhoto').src = student.photo;
            
            // Load fee information
            const fees = student.feeData;
            document.getElementById('feeBalance').textContent = `KSH ${fees.balance.toLocaleString()}`;
            document.getElementById('feeTotalDue').textContent = `KSH ${fees.totalDue.toLocaleString()}`;
            document.getElementById('feeAmountPaid').textContent = `KSH ${fees.amountPaid.toLocaleString()}`;
            document.getElementById('feeTerm1').textContent = `KSH ${fees.term1.toLocaleString()}`;
            document.getElementById('feeTerm2').textContent = `KSH ${fees.term2.toLocaleString()}`;
            
            // Load medical information
            if (student.medicalInfo) {
                document.getElementById('medicalInfoSection').style.display = 'block';
                document.getElementById('studentMedicalInfo').textContent = student.medicalInfo;
            }
            
            refreshNotifications();
        }

        async function refreshNotifications() {
            if (!currentStudent) return;
            
            try {
                const response = await fetch(`/Parents/GetNotifications?accountNumber=${currentStudent.accountNo}`);
                
                if (!response.ok) {
                    throw new Error('Failed to fetch notifications');
                }
                
                const notifications = await response.json();
                const notificationsList = document.getElementById('notificationsList');
                
                if (!notifications || notifications.length === 0) {
                    notificationsList.innerHTML = '<div id="notificationsEmpty" style="color: var(--text-muted);">No notifications yet.</div>';
                    return;
                }
                
                notificationsList.innerHTML = notifications.map(notif => `
                    <div style="padding: 8px 0; border-bottom: 1px solid var(--border); font-size: 0.85rem; ${notif.isRead ? 'opacity: 0.7;' : 'font-weight: 600;'}">
                        <div style="display: flex; gap: 8px; margin-bottom: 4px;">
                            <span class="material-icons-round" style="font-size: 16px; color: ${getNotificationColor(notif.type)};">
                                ${getNotificationIcon(notif.type)}
                            </span>
                            <span>${notif.message}</span>
                        </div>
                        <span style="color: var(--text-muted); font-size: 0.75rem;">${formatDate(notif.dateCreated)}</span>
                    </div>
                `).join('');
            } catch (error) {
                console.error('Error fetching notifications:', error);
                document.getElementById('notificationsList').innerHTML = '<div style="color: var(--text-muted);">Unable to load notifications.</div>';
            }
        }

        function getNotificationIcon(type) {
            switch(type) {
                case 'progress': return 'trending_up';
                case 'fee': return 'payment';
                case 'info': return 'info';
                default: return 'notifications';
            }
        }

        function getNotificationColor(type) {
            switch(type) {
                case 'progress': return 'var(--success)';
                case 'fee': return 'var(--warning)';
                case 'info': return 'var(--primary)';
                default: return 'var(--text-muted)';
            }
        }

        async function markAllNotificationsRead() {
            if (!currentStudent) return;
            
            try {
                const response = await fetch('/Parents/MarkNotificationsRead', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        accountNumber: currentStudent.accountNo
                    })
                });
                
                if (response.ok) {
                    refreshNotifications();
                }
            } catch (error) {
                console.error('Error marking notifications as read:', error);
            }
        }

        function showStudentModal() {
            document.getElementById('studentModalBackdrop').classList.add('active');
        }

        function closeStudentModal() {
            document.getElementById('studentModalBackdrop').classList.remove('active');
            document.getElementById('studentModalBackdrop').addEventListener('click', function(e) {
                if (e.target.id === 'studentModalBackdrop') {
                    this.classList.remove('active');
                }
            }, { once: true });
        }

        function openPaymentModal() {
            if (!currentStudent) return;
            document.getElementById('paymentAccountNo').value = currentStudent.accountNo;
            document.getElementById('paymentAmount').value = currentStudent.feeData.balance;
            document.getElementById('paymentModalBackdrop').classList.add('active');
        }

        function closePaymentModal() {
            document.getElementById('paymentModalBackdrop').classList.remove('active');
            document.getElementById('paymentFormState').style.display = 'block';
            document.getElementById('paymentSuccessState').style.display = 'none';
            document.getElementById('paymentForm').reset();
        }

        async function handlePayment(event) {
            event.preventDefault();
            
            const amount = parseFloat(document.getElementById('paymentAmount').value);
            const phone = document.getElementById('paymentPhone').value.trim();
            const submitBtn = event.target.querySelector('button[type="submit"]');
            
            if (amount <= 0) {
                alert('Please enter a valid amount');
                return;
            }
            
            if (!phone.match(/^(\+254|0)[17]\d{8}$/)) {
                alert('Please enter a valid Kenyan phone number (e.g., +2547XX XXX XXX or 07XX XXX XXX)');
                return;
            }
            
            try {
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<span class="material-icons-round">hourglass_bottom</span> Processing...';
                
                // Send payment request to backend
                const response = await fetch('/Parents/InitiatePayment', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        accountNumber: currentStudent.accountNo,
                        amount: amount,
                        phoneNumber: phone
                    })
                });

                if (!response.ok) {
                    const errorData = await response.json();
                    alert(errorData.message || 'Payment failed. Please try again.');
                    return;
                }

                const paymentData = await response.json();
                showPaymentSuccess(amount, paymentData.transactionId || 'CARDIN' + Math.random().toString(36).substr(2, 9).toUpperCase());
            } catch (error) {
                console.error('Payment error:', error);
                alert('Connection error. Please check your internet and try again.');
            } finally {
                submitBtn.disabled = false;
                submitBtn.innerHTML = '<span class="material-icons-round">payment</span> Proceed to Payment';
            }
        }

        function showPaymentSuccess(amount, transactionId) {
            document.getElementById('paymentFormState').style.display = 'none';
            document.getElementById('paymentSuccessState').style.display = 'block';
            
            document.getElementById('paymentTransactionId').textContent = transactionId;
            document.getElementById('receiptAmount').textContent = `KSH ${amount.toLocaleString()}`;
            document.getElementById('receiptStudent').textContent = currentStudent.fullName;
            document.getElementById('receiptDate').textContent = formatDate(new Date());
        }

        function downloadReceipt() {
            const transactionId = document.getElementById('paymentTransactionId').textContent;
            const amount = document.getElementById('receiptAmount').textContent;
            const student = document.getElementById('receiptStudent').textContent;
            const date = document.getElementById('receiptDate').textContent;
            
            const receiptContent = `
            CARDINAL OTUNGA HIGH SCHOOL MOSOCHO
            Payment Receipt
            
            Transaction ID: ${transactionId}
            Date: ${date}
            Student: ${student}
            Amount: ${amount}
            School: Cardinal Otunga High School Mosocho
            
            Thank you for your payment.
            `;
            
            const blob = new Blob([receiptContent], { type: 'text/plain' });
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `Receipt_${transactionId}.txt`;
            document.body.appendChild(a);
            a.click();
            window.URL.revokeObjectURL(url);
            document.body.removeChild(a);
        }

        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' });
        }

        function goHome() {
            window.location.href = '/';
        }

        // Close modals on backdrop click
        document.getElementById('studentModalBackdrop')?.addEventListener('click', (e) => {
            if (e.target.id === 'studentModalBackdrop') {
                closeStudentModal();
            }
        });

        document.getElementById('paymentModalBackdrop')?.addEventListener('click', (e) => {
            if (e.target.id === 'paymentModalBackdrop') {
                closePaymentModal();
            }
        });

        // Clear login form on page load
        window.addEventListener('load', () => {
            document.getElementById('loginForm').reset();
        });
    </script>
</body>
