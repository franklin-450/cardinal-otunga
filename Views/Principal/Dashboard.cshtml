    <script>
        const schoolName = '@Html.Raw(Context.Request.RouteValues["schoolName"])';

        // Smart Alert System
        function showAlert(message, type = 'info') {
            const alert = document.createElement('div');
            alert.className = `smart-alert ${type}`;
            
            const icon = type === 'success' ? 'fa-check-circle' : 
                        type === 'error' ? 'fa-exclamation-circle' : 
                        type === 'warning' ? 'fa-exclamation-triangle' : 'fa-info-circle';
            
            alert.innerHTML = `
                <i class="fas ${icon} text-2xl"></i>
                <div class="flex-1">
                    <p class="font-semibold">${message}</p>
                </div>
                <button onclick="this.parentElement.classList.add('hiding'); setTimeout(() => this.parentElement.remove(), 300)" class="hover:bg-white hover:bg-opacity-20 w-8 h-8 rounded-full flex items-center justify-center transition-all">
                    <i class="fas fa-times"></i>
                </button>
            `;
            
            document.body.appendChild(alert);
            
            setTimeout(() => {
                alert.classList.add('hiding');
                setTimeout(() => alert.remove(), 300);
            }, 5000);
        }

        // Navigation
        function showSection(sectionId) {
            document.querySelectorAll('.section').forEach(el => el.classList.add('hidden'));
            document.getElementById(sectionId + '-section').classList.remove('hidden');
            
            // Update active nav item
            document.querySelectorAll('.nav-item').forEach(item => item.classList.remove('active'));
            event.target.closest('.nav-item').classList.add('active');
        }

        // Modal Management
        function openModal(modalName) {
            document.getElementById(modalName + 'Modal').classList.add('active');
        }

        function closeModal(modalName) {
            document.getElementById(modalName + 'Modal').classList.remove('active');
        }

        // Generate Password
        function generatePassword() {
            const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789';
            let password = '';
            for (let i = 0; i < 12; i++) {
                password += chars.charAt(Math.floor(Math.random() * chars.length));
            }
            document.getElementById('tempPassword').value = password;
        }

        // Load data on page load
        window.addEventListener('DOMContentLoaded', async () => {
            await loadSchoolConfig();
            await loadDashboardStats();
            await loadRecentAdmissions();
            await loadGrades();
            await loadLearners();
            await loadStaff();
            await loadStaffForCredentials();
            await loadCredentialsHistory();
            await loadFinances();
        });

        // Load School Configuration
        async function loadSchoolConfig() {
            try {
                const response = await fetch(`/${schoolName}/principal/api/school-config`);
                const data = await response.json();

                if (data.success && data.data) {
                    const config = data.data;
                    document.getElementById('schoolName').value = config.schoolName || '';
                    document.getElementById('schoolMotto').value = config.schoolMotto || '';
                    document.getElementById('regNumber').value = config.registrationNumber || '';
                    document.getElementById('establishedYear').value = config.establishedYear || '';
                    
                    if (config.badgeUrl) {
                        const badgeImg = document.getElementById('badgeImg');
                        const placeholder = document.getElementById('badgePlaceholder');
                        badgeImg.src = config.badgeUrl;
                        badgeImg.style.display = 'block';
                        if (placeholder) placeholder.style.display = 'none';
                    }
                }
            } catch (error) {
                console.error('Error loading school config:', error);
            }
        }

        // Load Grades
        async function loadGrades() {
            try {
                const response = await fetch(`/${schoolName}/principal/api/grades`);
                const data = await response.json();

                if (data.success && data.grades) {
                    displayGrades(data.grades);
                    // Populate class filter
                    const classFilter = document.getElementById('classFilter');
                    const learnerClass = document.getElementById('learnerClass');
                    data.grades.forEach(grade => {
                        classFilter.innerHTML += `<option value="${grade.gradeName}">${grade.gradeName}</option>`;
                        learnerClass.innerHTML += `<option value="${grade.gradeName}">${grade.gradeName}</option>`;
                    });
                }
            } catch (error) {
                console.error('Error loading grades:', error);
            }
        }

        // Display Grades
        function displayGrades(grades) {
            const container = document.getElementById('gradesContainer');
            if (grades.length === 0) {
                container.innerHTML = '<div class="text-center py-12 text-gray-500 col-span-full">No grades configured yet</div>';
                return;
            }

            container.innerHTML = grades.map(grade => `
                <div class="bg-white rounded-xl p-6 border border-gray-200 hover:shadow-lg transition-all cursor-pointer" onclick="viewLearnersByGrade('${grade.gradeName}')">
                    <div class="flex items-center justify-between mb-4">
                        <h4 class="text-xl font-bold text-gray-800">${grade.gradeName}</h4>
                        <span class="bg-blue-100 text-blue-600 px-3 py-1 rounded-full text-sm font-semibold">
                            <i class="fas fa-eye mr-1"></i> View
                        </span>
                    </div>
                    <div class="grid grid-cols-3 gap-3 mb-4">
                        <div class="bg-green-50 rounded-lg p-3">
                            <p class="text-xs text-gray-600 mb-1">Term 1</p>
                            <p class="text-lg font-bold text-green-600">KES ${formatNumber(grade.term1Fee)}</p>
                        </div>
                        <div class="bg-blue-50 rounded-lg p-3">
                            <p class="text-xs text-gray-600 mb-1">Term 2</p>
                            <p class="text-lg font-bold text-blue-600">KES ${formatNumber(grade.term2Fee)}</p>
                        </div>
                        <div class="bg-purple-50 rounded-lg p-3">
                            <p class="text-xs text-gray-600 mb-1">Term 3</p>
                            <p class="text-lg font-bold text-purple-600">KES ${formatNumber(grade.term3Fee)}</p>
                        </div>
                    </div>
                    <div class="border-t border-gray-200 pt-3">
                        <p class="text-sm font-semibold text-gray-700 mb-2">Streams:</p>
                        <div class="flex flex-wrap gap-2">
                            ${grade.streams && grade.streams.length > 0 ? grade.streams.map(stream => `
                                <span class="bg-indigo-50 text-indigo-700 px-3 py-1 rounded-full text-xs font-semibold">
                                    ${stream}
                                </span>
                            `).join('') : '<span class="bg-gray-100 text-gray-600 px-3 py-1 rounded-full text-xs">No Streams</span>'}
                        </div>
                    </div>
                    <div class="mt-3 pt-3 border-t border-gray-200">
                        <p class="text-sm font-semibold text-gray-500">Annual Fee: <span class="text-gray-800">KES ${formatNumber(grade.totalFees)}</span></p>
                    </div>
                </div>
            `).join('');
        }

        // View Learners by Grade
        async function viewLearnersByGrade(gradeName) {
            try {
                const response = await fetch(`/${schoolName}/principal/api/learners/by-grade/${gradeName}`);
                const data = await response.json();

                if (data.success) {
                    showLearnersByGradeModal(gradeName, data.learners);
                }
            } catch (error) {
                showAlert('Error loading learners: ' + error.message, 'error');
            }
        }

        // Show Learners by Grade Modal
        function showLearnersByGradeModal(gradeName, learners) {
            const modal = document.createElement('div');
            modal.className = 'modal active';
            modal.innerHTML = `
                <div class="bg-white rounded-xl shadow-2xl max-w-5xl w-full mx-4 overflow-hidden max-h-[90vh] overflow-y-auto">
                    <div class="bg-gradient-to-r from-blue-600 to-blue-700 px-8 py-6 text-white flex items-center justify-between sticky top-0">
                        <div>
                            <h2 class="text-2xl font-bold">Learners in ${gradeName}</h2>
                            <p class="text-sm opacity-90">${learners.length} student(s) found</p>
                        </div>
                        <button onclick="this.closest('.modal').remove()" class="hover:bg-white hover:bg-opacity-20 w-10 h-10 rounded-full flex items-center justify-center transition-all">
                            <i class="fas fa-times text-xl"></i>
                        </button>
                    </div>

                    <div class="p-8">
                        ${learners.length === 0 ? 
                            '<div class="text-center py-12"><i class="fas fa-users text-6xl text-gray-300 mb-4"></i><p class="text-gray-500">No learners in this grade</p></div>' 
                            : 
                            `<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                ${learners.map(learner => `
                                    <div class="bg-white border border-gray-200 rounded-lg p-4 hover:shadow-md transition-all">
                                        <div class="flex items-start justify-between mb-3">
                                            <div class="flex items-center space-x-3">
                                                <div class="w-12 h-12 bg-gradient-to-br from-blue-400 to-blue-600 rounded-lg flex items-center justify-center text-white font-bold">
                                                    ${learner.fullName.substring(0, 2).toUpperCase()}
                                                </div>
                                                <div>
                                                    <p class="font-bold text-gray-800">${learner.fullName}</p>
                                                    <p class="text-sm text-gray-500">${learner.admissionNo}</p>
                                                </div>
                                            </div>
                                            <span class="px-3 py-1 bg-green-100 text-green-700 rounded-full text-xs font-semibold">
                                                ${learner.status}
                                            </span>
                                        </div>
                                        <div class="grid grid-cols-2 gap-3 text-sm">
                                            <div>
                                                <p class="text-gray-500">Stream</p>
                                                <p class="font-semibold text-gray-800">${learner.stream}</p>
                                            </div>
                                            <div>
                                                <p class="text-gray-500">Gender</p>
                                                <p class="font-semibold text-gray-800">${learner.gender}</p>
                                            </div>
                                        </div>
                                    </div>
                                `).join('')}
                            </div>`
                        }
                    </div>
                </div>
            `;

            document.body.appendChild(modal);
            modal.addEventListener('click', (e) => {
                if (e.target === modal) modal.remove();
            });
        }

        // Load Dashboard Stats
        async function loadDashboardStats() {
            try {
                const response = await fetch(`/${schoolName}/principal/api/dashboard-stats`);
                const data = await response.json();

                if (data.success) {
                    document.getElementById('totalLearners').textContent = data.data.totalLearners || 0;
                    document.getElementById('totalStaff').textContent = data.data.totalStaff || 0;
                    document.getElementById('totalRevenue').textContent = 'KES ' + formatNumber(data.data.totalRevenue || 0);
                    document.getElementById('outstandingFees').textContent = 'KES ' + formatNumber(data.data.outstandingFees || 0);
                    
                    document.getElementById('totalLearnersHero').textContent = data.data.totalLearners || 0;
                    document.getElementById('totalStaffHero').textContent = data.data.totalStaff || 0;
                    document.getElementById('totalRevenueHero').textContent = 'KES ' + formatNumber(data.data.totalRevenue || 0);
                }
            } catch (error) {
                console.error('Error loading dashboard stats:', error);
            }
        }

        // Load Recent Admissions
        async function loadRecentAdmissions() {
            try {
                const response = await fetch(`/${schoolName}/principal/api/recent-admissions`);
                const data = await response.json();

                if (data.success && data.admissions) {
                    const container = document.getElementById('recentAdmissionsContainer');
                    if (data.admissions.length === 0) {
                        container.innerHTML = '<div class="text-center py-8 text-gray-500">No recent admissions</div>';
                        return;
                    }

                    container.innerHTML = data.admissions.map(admission => `
                        <div class="flex items-center justify-between p-4 hover:bg-gray-50 rounded-lg transition-all">
                            <div class="flex items-center space-x-4">
                                <div class="w-12 h-12 bg-gradient-to-br from-blue-400 to-blue-600 rounded-lg flex items-center justify-center text-white font-bold">
                                    ${admission.fullName.substring(0, 2).toUpperCase()}
                                </div>
                                <div>
                                    <p class="font-semibold text-gray-800">${admission.fullName}</p>
                                    <p class="text-sm text-gray-500">${admission.grade} - ${admission.accountNo}</p>
                                </div>
                            </div>
                            <div class="text-right">
                                <p class="text-xs text-gray-500">${new Date(admission.admissionDate).toLocaleDateString()}</p>
                                <span class="text-xs px-2 py-1 bg-green-100 text-green-700 rounded-full">New</span>
                            </div>
                        </div>
                    `).join('');
                }
            } catch (error) {
                console.error('Error loading recent admissions:', error);
            }
        }

        // Load Learners
        async function loadLearners() {
            try {
                const response = await fetch(`/${schoolName}/principal/api/learners`);
                const data = await response.json();

                if (data.success && data.learners) {
                    displayLearners(data.learners);
                }
            } catch (error) {
                console.error('Error loading learners:', error);
                document.getElementById('learnersTableBody').innerHTML = '<tr><td colspan="5" class="text-center py-8 text-red-500">Error loading learners</td></tr>';
            }
        }

        // Display Learners
        function displayLearners(learners) {
            const tbody = document.getElementById('learnersTableBody');
            if (learners.length === 0) {
                tbody.innerHTML = '<tr><td colspan="5" class="text-center py-8 text-gray-500">No learners found</td></tr>';
                return;
            }

            tbody.innerHTML = learners.map(learner => `
                <tr class="hover:bg-gray-50">
                    <td class="py-4 px-6">
                        <div class="flex items-center space-x-3">
                            <div class="w-10 h-10 bg-gradient-to-br from-blue-400 to-blue-600 rounded-lg flex items-center justify-center text-white font-bold text-sm">
                                ${learner.fullName.substring(0, 2).toUpperCase()}
                            </div>
                            <span class="font-medium text-gray-800">${learner.fullName}</span>
                        </div>
                    </td>
                    <td class="py-4 px-6 text-gray-600">${learner.admissionNo}</td>
                    <td class="py-4 px-6">
                        <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-xs font-semibold">
                            ${learner.class} ${learner.stream !== 'General' ? '- ' + learner.stream : ''}
                        </span>
                    </td>
                    <td class="py-4 px-6 text-gray-600">${learner.gender}</td>
                    <td class="py-4 px-6">
                        <span class="px-3 py-1 ${learner.status === 'Active' ? 'bg-green-100 text-green-700' : 'bg-gray-100 text-gray-700'} rounded-full text-xs font-semibold">
                            ${learner.status}
                        </span>
                    </td>
                </tr>
            `).join('');

            // Add search and filter functionality
            setupLearnerFilters(learners);
        }

        // Setup Learner Filters
        function setupLearnerFilters(allLearners) {
            const searchInput = document.getElementById('learnerSearch');
            const classFilter = document.getElementById('classFilter');

            function filterLearners() {
                const searchTerm = searchInput.value.toLowerCase();
                const selectedClass = classFilter.value;

                const filtered = allLearners.filter(learner => {
                    const matchesSearch = learner.fullName.toLowerCase().includes(searchTerm) || 
                                        learner.admissionNo.toLowerCase().includes(searchTerm);
                    const matchesClass = !selectedClass || learner.class === selectedClass;
                    return matchesSearch && matchesClass;
                });

                displayLearners(filtered);
            }

            searchInput.addEventListener('input', filterLearners);
            classFilter.addEventListener('change', filterLearners);
        }

        // Load Staff
        async function loadStaff() {
            try {
                const response = await fetch(`/${schoolName}/principal/api/staff`);
                const data = await response.json();

                if (data.success && data.staff) {
                    displayStaff(data.staff);
                }
            } catch (error) {
                console.error('Error loading staff:', error);
                document.getElementById('staffTableBody').innerHTML = '<tr><td colspan="5" class="text-center py-8 text-red-500">Error loading staff</td></tr>';
            }
        }

        // Display Staff
        function displayStaff(staff) {
            const tbody = document.getElementById('staffTableBody');
            if (staff.length === 0) {
                tbody.innerHTML = '<tr><td colspan="5" class="text-center py-8 text-gray-500">No staff members found</td></tr>';
                return;
            }

            tbody.innerHTML = staff.map(member => `
                <tr class="hover:bg-gray-50">
                    <td class="py-4 px-6">
                        <div class="flex items-center space-x-3">
                            <div class="w-10 h-10 bg-gradient-to-br from-purple-400 to-purple-600 rounded-lg flex items-center justify-center text-white font-bold text-sm">
                                ${member.fullName.substring(0, 2).toUpperCase()}
                            </div>
                            <span class="font-medium text-gray-800">${member.fullName}</span>
                        </div>
                    </td>
                    <td class="py-4 px-6 text-gray-600">${member.email}</td>
                    <td class="py-4 px-6 text-gray-600">${member.phone || 'N/A'}</td>
                    <td class="py-4 px-6">
                        <span class="px-3 py-1 bg-indigo-100 text-indigo-700 rounded-full text-xs font-semibold">
                            ${member.position}
                        </span>
                    </td>
                    <td class="py-4 px-6">
                        <span class="px-3 py-1 ${member.isActive ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700'} rounded-full text-xs font-semibold">
                            ${member.isActive ? 'Active' : 'Inactive'}
                        </span>
                    </td>
                </tr>
            `).join('');

            // Setup staff search
            const searchInput = document.getElementById('staffSearch');
            if (searchInput) {
                searchInput.addEventListener('input', (e) => {
                    const searchTerm = e.target.value.toLowerCase();
                    const filtered = staff.filter(member => 
                        member.fullName.toLowerCase().includes(searchTerm) ||
                        member.email.toLowerCase().includes(searchTerm) ||
                        member.position.toLowerCase().includes(searchTerm)
                    );
                    displayStaff(filtered);
                });
            }
        }

        // Load Staff for Credentials
        async function loadStaffForCredentials() {
            try {
                const response = await fetch(`/${schoolName}/principal/api/staff`);
                const data = await response.json();

                if (data.success && data.staff) {
                    const select = document.getElementById('staffSelect');
                    select.innerHTML = '<option value="">Choose a staff member...</option>' + 
                        data.staff.map(staff => `<option value="${staff.id}">${staff.fullName} - ${staff.position}</option>`).join('');
                }
            } catch (error) {
                console.error('Error loading staff for credentials:', error);
            }
        }

        // Load Credentials History
        async function loadCredentialsHistory() {
            try {
                const response = await fetch(`/${schoolName}/principal/api/credentials/history`);
                const data = await response.json();

                if (data.success && data.credentials) {
                    const tbody = document.getElementById('credentialsHistoryBody');
                    if (data.credentials.length === 0) {
                        tbody.innerHTML = '<tr><td colspan="5" class="text-center py-8 text-gray-500">No credentials created yet</td></tr>';
                        return;
                    }

                    tbody.innerHTML = data.credentials.map(cred => `
                        <tr class="hover:bg-gray-50">
                            <td class="py-4 px-6 font-medium text-gray-800">${cred.staffName}</td>
                            <td class="py-4 px-6 text-gray-600">${cred.username}</td>
                            <td class="py-4 px-6">
                                <span class="px-3 py-1 bg-purple-100 text-purple-700 rounded-full text-xs font-semibold">
                                    ${cred.role}
                                </span>
                            </td>
                            <td class="py-4 px-6 text-gray-600 text-sm">${new Date(cred.createdDate).toLocaleDateString()}</td>
                            <td class="py-4 px-6">
                                <span class="px-3 py-1 ${cred.isActive ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700'} rounded-full text-xs font-semibold">
                                    ${cred.isActive ? 'Active' : 'Inactive'}
                                </span>
                            </td>
                        </tr>
                    `).join('');
                }
            } catch (error) {
                console.error('Error loading credentials history:', error);
            }
        }

        // Load Finances
        async function loadFinances() {
            try {
                const response = await fetch(`/${schoolName}/principal/api/finances`);
                const data = await response.json();

                if (data.success && data.data) {
                    document.getElementById('financeRevenue').textContent = 'KES ' + formatNumber(data.data.totalRevenue || 0);
                    document.getElementById('financeOutstanding').textContent = 'KES ' + formatNumber(data.data.outstandingFees || 0);
                    document.getElementById('financeRate').textContent = Math.round(data.data.collectionRate || 0) + '%';
                }
            } catch (error) {
                console.error('Error loading finances:', error);
            }
        }

        // Format Number
        function formatNumber(num) {
            return new Intl.NumberFormat('en-KE').format(num);
        }

        // Close modals on outside click
        document.querySelectorAll('.modal').forEach(modal => {
            modal.addEventListener('click', (e) => {
                if (e.target === modal) {
                    modal.classList.remove('active');
                }
            });
        });

        // Register Staff Form
        document.getElementById('registerStaffForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = {
                fullName: document.getElementById('staffFullName').value,
                email: document.getElementById('staffEmail').value,
                phone: document.getElementById('staffPhone').value,
                position: document.getElementById('staffPosition').value
            };

            try {
                const response = await fetch(`/${schoolName}/principal/api/staff/register`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(formData)
                });

                const data = await response.json();
                if (data.success) {
                    showAlert('Staff registered successfully! You can now create login credentials.', 'success');
                    closeModal('registerStaff');
                    document.getElementById('registerStaffForm').reset();
                    await loadStaff();
                    await loadStaffForCredentials();
                } else {
                    showAlert(data.message || 'Registration failed', 'error');
                }
            } catch (error) {
                showAlert('Error: ' + error.message, 'error');
            }
        });

        // Enroll Learner Form
        document.getElementById('addLearnerForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = {
                fullName: document.getElementById('learnerFullName').value,
                dateOfBirth: document.getElementById('learnerDOB').value,
                class: document.getElementById('learnerClass').value,
                gender: document.getElementById('learnerGender').value,
                guardianEmail: document.getElementById('guardianEmail').value
            };

            try {
                const response = await fetch(`/${schoolName}/principal/api/learners/enroll`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(formData)
                });

                const data = await response.json();
                if (data.success) {
                    showAlert(`Student enrolled successfully! Admission No: ${data.admissionNo}`, 'success');
                    closeModal('addLearner');
                    document.getElementById('addLearnerForm').reset();
                    await loadDashboardStats();
                    await loadRecentAdmissions();
                    await loadLearners();
                } else {
                    showAlert(data.message || 'Enrollment failed', 'error');
                }
            } catch (error) {
                showAlert('Error: ' + error.message, 'error');
            }
        });

        // Credentials Form
        document.getElementById('credentialsForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = {
                staffId: parseInt(document.getElementById('staffSelect').value),
                role: document.getElementById('roleSelect').value,
                username: document.getElementById('username').value,
                tempPassword: document.getElementById('tempPassword').value,
                position: document.getElementById('position').value,
                department: document.getElementById('department').value
            };

            if (!formData.staffId) {
                showAlert('Please select a staff member', 'warning');
                return;
            }

            try {
                const response = await fetch(`/${schoolName}/principal/api/credentials/create`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(formData)
                });

                const data = await response.json();
                if (data.success) {
                    showAlert('Credentials created successfully! Staff can now login.', 'success');
                    document.getElementById('credentialsForm').reset();
                    await loadCredentialsHistory();
                } else {
                    showAlert(data.message || 'Failed to create credentials', 'error');
                }
            } catch (error) {
                showAlert('Error: ' + error.message, 'error');
            }
        });

        // Badge Upload Form
        document.getElementById('badgeForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const fileInput = document.getElementById('badgeFile');
            if (!fileInput.files.length) {
                showAlert('Please select a file', 'warning');
                return;
            }

            const formData = new FormData();
            formData.append('badge', fileInput.files[0]);

            try {
                const response = await fetch(`/${schoolName}/principal/api/school/upload-badge`, {
                    method: 'POST',
                    body: formData
                });

                const data = await response.json();
                if (data.success) {
                    const badgeImg = document.getElementById('badgeImg');
                    const placeholder = document.getElementById('badgePlaceholder');
                    badgeImg.src = data.badgeUrl + '?t=' + new Date().getTime();
                    badgeImg.style.display = 'block';
                    if (placeholder) placeholder.style.display = 'none';
                    showAlert('Badge uploaded successfully!', 'success');
                } else {
                    showAlert(data.message || 'Upload failed', 'error');
                }
            } catch (error) {
                showAlert('Error: ' + error.message, 'error');
            }
        });

        // Badge File Preview
        document.getElementById('badgeFile').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                if (!file.type.startsWith('image/')) {
                    showAlert('Please select an image file', 'warning');
                    this.value = '';
                    return;
                }

                if (file.size > 5 * 1024 * 1024) {
                    showAlert('File size must be less than 5MB', 'warning');
                    this.value = '';
                    return;
                }

                const reader = new FileReader();
                reader.onload = function(e) {
                    const badgeImg = document.getElementById('badgeImg');
                    const placeholder = document.getElementById('badgePlaceholder');
                    badgeImg.src = e.target.result;
                    badgeImg.style.display = 'block';
                    if (placeholder) placeholder.style.display = 'none';
                };
                reader.readAsDataURL(file);
            }
        });

        // School Basic Info Form
        document.getElementById('schoolBasicForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = {
                schoolName: document.getElementById('schoolName').value,
                registrationNumber: document.getElementById('regNumber').value,
                establishedYear: parseInt(document.getElementById('establishedYear').value) || null,
                schoolMotto: document.getElementById('schoolMotto').value
            };

            try {
                const response = await fetch(`/${schoolName}/principal/api/school/update-info`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(formData)
                });

                const data = await response.json();
                if (data.success) {
                    showAlert('School information updated successfully!', 'success');
                } else {
                    showAlert(data.message || 'Update failed', 'error');
                }
            } catch (error) {
                showAlert('Error: ' + error.message, 'error');
            }
        });

        // Contact Form
        document.getElementById('contactForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = {
                email: document.getElementById('schoolEmail').value,
                phone: document.getElementById('schoolPhone').value,
                address: document.getElementById('schoolAddress').value,
                website: document.getElementById('schoolWebsite').value
            };

            try {
                const response = await fetch(`/${schoolName}/principal/api/school/update-contact`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(formData)
                });

                const data = await response.json();
                if (data.success) {
                    showAlert('Contact information updated successfully!', 'success');
                } else {
                    showAlert(data.message || 'Update failed', 'error');
                }
            } catch (error) {
                showAlert('Error: ' + error.message, 'error');
            }
        });

        // Tab navigation
        document.getElementById('staffTab').addEventListener('click', () => {
            document.getElementById('staffContent').classList.remove('hidden');
            document.getElementById('credentialsContent').classList.add('hidden');
            document.getElementById('staffTab').classList.add('active');
            document.getElementById('credentialsTab').classList.remove('active');
        });

        document.getElementById('credentialsTab').addEventListener('click', () => {
            document.getElementById('staffContent').classList.add('hidden');
            document.getElementById('credentialsContent').classList.remove('hidden');
            document.getElementById('staffTab').classList.remove('active');
            document.getElementById('credentialsTab').classList.add('active');
        });
    </script>
</body>
</html>