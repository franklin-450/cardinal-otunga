@{
    ViewData["Title"] = "Principal Dashboard";
    var schoolName = ViewData["SchoolName"]?.ToString() ?? "School";
    var userEmail = ViewData["UserEmail"]?.ToString() ?? "principal@school.edu";
    var schoolLogo = ViewData["SchoolLogo"]?.ToString() ?? "";
    var schoolMotto = ViewData["SchoolMotto"]?.ToString() ?? "Excellence in Education";
    var userInitial = string.IsNullOrEmpty(userEmail) ? "P" : userEmail[0].ToString().ToUpper();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - @schoolName</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap');
        
        * {
            font-family: 'Inter', sans-serif;
        }

        body {
            background: #f8fafc;
        }

        .glass {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(229, 231, 235, 0.6);
        }

        .hero-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%),
                        url('https://images.unsplash.com/photo-1427504494785-cdbe9fefcb30?w=1200&h=400&fit=crop');
            background-size: cover;
            background-position: center;
            position: relative;
            overflow: hidden;
        }

        .hero-section::before {
            content: '';
            position: absolute;
            inset: 0;
            background: rgba(102, 126, 234, 0.7);
            z-index: 1;
        }

        .hero-content {
            position: relative;
            z-index: 2;
        }

        .stat-card {
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.08);
        }

        .btn-primary {
            background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
            transition: all 0.3s;
        }

        .btn-primary:hover {
            box-shadow: 0 8px 20px rgba(59, 130, 246, 0.3);
            transform: translateY(-2px);
        }

        .sidebar {
            transition: all 0.3s ease;
            max-height: 100vh;
            overflow-y: auto;
        }

        .nav-item {
            transition: all 0.2s;
        }

        .nav-item:hover {
            padding-left: 1.5rem;
            background: rgba(59, 130, 246, 0.1);
        }

        .nav-item.active {
            background: rgba(59, 130, 246, 0.15);
            border-left: 4px solid #3b82f6;
            padding-left: 1rem;
        }

        .section {
            animation: fadeIn 0.5s ease-in;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .modal {
            display: none;
            position: fixed;
            inset: 0;
            z-index: 50;
            background: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(4px);
            align-items: center;
            justify-content: center;
            overflow-y: auto;
        }

        .modal.active {
            display: flex;
        }

        .tab-button {
            transition: all 0.3s;
            border-bottom: 3px solid transparent;
        }

        .tab-button.active {
            border-bottom-color: #3b82f6;
            color: #3b82f6;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        tbody tr {
            border-bottom: 1px solid #e5e7eb;
            transition: all 0.2s;
        }

        tbody tr:hover {
            background: #f9fafb;
        }

        /* Smart Alert Styles */
        .smart-alert {
            position: fixed;
            top: 20px;
            right: 20px;
            min-width: 320px;
            max-width: 400px;
            padding: 16px 20px;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            z-index: 9999;
            animation: slideIn 0.3s ease-out;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .smart-alert.success {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            color: white;
        }

        .smart-alert.error {
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
            color: white;
        }

        .smart-alert.info {
            background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
            color: white;
        }

        .smart-alert.warning {
            background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
            color: white;
        }

        @@keyframes slideIn {
            from {
                transform: translateX(400px);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        @@keyframes slideOut {
            from {
                transform: translateX(0);
                opacity: 1;
            }
            to {
                transform: translateX(400px);
                opacity: 0;
            }
        }

        .smart-alert.hiding {
            animation: slideOut 0.3s ease-in forwards;
        }
    </style>
</head>
<body>
    <div class="flex h-screen bg-slate-50">
        <!-- Sidebar Navigation -->
        <div class="sidebar w-64 bg-white shadow-lg fixed h-screen border-r border-gray-200 z-40">
            <div class="p-6 border-b border-gray-200">
                <div class="flex items-center space-x-3 mb-6">
                    <div class="w-12 h-12 bg-gradient-to-br from-blue-600 to-blue-700 rounded-lg flex items-center justify-center text-white">
                        <i class="fas fa-graduation-cap text-lg"></i>
                    </div>
                    <div>
                        <h1 class="text-lg font-bold text-gray-800">EduHub</h1>
                        <p class="text-xs text-gray-500">Principal Panel</p>
                    </div>
                </div>
            </div>

            <nav class="p-4 space-y-2">
                <button onclick="showSection('dashboard')" class="nav-item active w-full text-left px-4 py-3 rounded-lg text-gray-700 font-medium flex items-center space-x-3 hover:bg-blue-50">
                    <i class="fas fa-chart-line w-5"></i>
                    <span>Dashboard</span>
                </button>
                <button onclick="showSection('school-info')" class="nav-item w-full text-left px-4 py-3 rounded-lg text-gray-700 font-medium flex items-center space-x-3 hover:bg-blue-50">
                    <i class="fas fa-school w-5"></i>
                    <span>School Info</span>
                </button>
                <button onclick="showSection('grades')" class="nav-item w-full text-left px-4 py-3 rounded-lg text-gray-700 font-medium flex items-center space-x-3 hover:bg-blue-50">
                    <i class="fas fa-book w-5"></i>
                    <span>Grades</span>
                </button>
                <button onclick="showSection('learners')" class="nav-item w-full text-left px-4 py-3 rounded-lg text-gray-700 font-medium flex items-center space-x-3 hover:bg-blue-50">
                    <i class="fas fa-users w-5"></i>
                    <span>Learners</span>
                </button>
                <button onclick="showSection('staff')" class="nav-item w-full text-left px-4 py-3 rounded-lg text-gray-700 font-medium flex items-center space-x-3 hover:bg-blue-50">
                    <i class="fas fa-user-tie w-5"></i>
                    <span>Staff & Credentials</span>
                </button>
                <button onclick="showSection('finances')" class="nav-item w-full text-left px-4 py-3 rounded-lg text-gray-700 font-medium flex items-center space-x-3 hover:bg-blue-50">
                    <i class="fas fa-money-bill-wave w-5"></i>
                    <span>Finances</span>
                </button>
            </nav>

            <div class="p-4 mt-auto border-t border-gray-200">
                <a href="/@Html.Raw(Context.Request.RouteValues["schoolName"])/logout" 
                   class="w-full text-left px-4 py-3 rounded-lg text-gray-700 font-medium flex items-center space-x-3 hover:bg-red-50 hover:text-red-600 transition-all">
                    <i class="fas fa-sign-out-alt w-5"></i>
                    <span>Logout</span>
                </a>
            </div>
        </div>

        <!-- Main Content -->
        <div class="flex-1 ml-64 overflow-auto">
            <!-- Top Navigation -->
            <nav class="bg-white border-b border-gray-200 sticky top-0 z-30 shadow-sm">
                <div class="px-8 py-4 flex items-center justify-between">
                    <div class="flex items-center space-x-4">
                        <div>
                            <h2 class="text-xl font-bold text-gray-800">Welcome, Principal</h2>
                            <p class="text-sm text-gray-500">@schoolName</p>
                        </div>
                    </div>
                    <div class="flex items-center space-x-6">
                        <button class="relative p-2 hover:bg-gray-100 rounded-lg transition-all">
                            <i class="fas fa-bell text-gray-600 text-lg"></i>
                            <span class="absolute top-1 right-1 w-2 h-2 bg-red-500 rounded-full"></span>
                        </button>
                        <div class="flex items-center space-x-3 border-l border-gray-200 pl-6">
                            <div class="text-right">
                                <p class="text-sm font-semibold text-gray-800">Principal</p>
                                <p class="text-xs text-gray-500">@userEmail</p>
                            </div>
                            <div class="w-10 h-10 bg-gradient-to-br from-blue-400 to-blue-600 rounded-lg flex items-center justify-center text-white font-bold text-sm">
                                @userInitial
                            </div>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Dashboard Section -->
            <div id="dashboard-section" class="section p-8">
                <!-- Hero Section -->
                <div class="hero-section rounded-2xl p-8 mb-8 text-white">
                    <div class="hero-content">
                        <h1 class="text-4xl font-bold mb-2">@schoolName</h1>
                        <p class="text-lg opacity-90 mb-8">@schoolMotto</p>
                        <div class="grid grid-cols-2 sm:grid-cols-4 gap-6">
                            <div>
                                <p class="text-3xl font-bold" id="totalLearnersHero">0</p>
                                <p class="text-sm opacity-75">Active Learners</p>
                            </div>
                            <div>
                                <p class="text-3xl font-bold" id="totalStaffHero">0</p>
                                <p class="text-sm opacity-75">Staff Members</p>
                            </div>
                            <div>
                                <p class="text-3xl font-bold">98%</p>
                                <p class="text-sm opacity-75">Pass Rate</p>
                            </div>
                            <div>
                                <p class="text-3xl font-bold" id="totalRevenueHero">KES 0</p>
                                <p class="text-sm opacity-75">Revenue</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Stats Grid -->
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                    <div class="stat-card bg-white rounded-xl p-6 shadow-sm border border-gray-200">
                        <div class="flex items-center justify-between mb-4">
                            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center text-blue-600">
                                <i class="fas fa-users text-xl"></i>
                            </div>
                            <span class="text-sm text-green-600 font-semibold">+8%</span>
                        </div>
                        <h3 class="text-sm text-gray-600 mb-1">Total Learners</h3>
                        <p class="text-3xl font-bold text-gray-800" id="totalLearners">0</p>
                    </div>

                    <div class="stat-card bg-white rounded-xl p-6 shadow-sm border border-gray-200">
                        <div class="flex items-center justify-between mb-4">
                            <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center text-purple-600">
                                <i class="fas fa-user-tie text-xl"></i>
                            </div>
                            <span class="text-sm text-green-600 font-semibold">+3%</span>
                        </div>
                        <h3 class="text-sm text-gray-600 mb-1">Staff Members</h3>
                        <p class="text-3xl font-bold text-gray-800" id="totalStaff">0</p>
                    </div>

                    <div class="stat-card bg-white rounded-xl p-6 shadow-sm border border-gray-200">
                        <div class="flex items-center justify-between mb-4">
                            <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center text-green-600">
                                <i class="fas fa-money-bill-wave text-xl"></i>
                            </div>
                            <span class="text-sm text-green-600 font-semibold">+12%</span>
                        </div>
                        <h3 class="text-sm text-gray-600 mb-1">Total Revenue</h3>
                        <p class="text-2xl font-bold text-gray-800" id="totalRevenue">KES 0</p>
                    </div>

                    <div class="stat-card bg-white rounded-xl p-6 shadow-sm border border-gray-200">
                        <div class="flex items-center justify-between mb-4">
                            <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center text-orange-600">
                                <i class="fas fa-exclamation-triangle text-xl"></i>
                            </div>
                            <span class="text-sm text-red-600 font-semibold">-5%</span>
                        </div>
                        <h3 class="text-sm text-gray-600 mb-1">Outstanding Fees</h3>
                        <p class="text-2xl font-bold text-gray-800" id="outstandingFees">KES 0</p>
                    </div>
                </div>

                <!-- Recent Activity -->
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                    <div class="lg:col-span-2 glass rounded-xl p-6 shadow-sm border border-gray-200">
                        <div class="flex items-center justify-between mb-6">
                            <h3 class="text-lg font-bold text-gray-800">Recent Admissions</h3>
                            <button onclick="showSection('learners')" class="text-blue-600 hover:text-blue-700 font-medium text-sm">View All</button>
                        </div>
                        <div id="recentAdmissionsContainer" class="space-y-4">
                            <div class="text-center py-8 text-gray-500">Loading...</div>
                        </div>
                    </div>

                    <div class="glass rounded-xl p-6 shadow-sm border border-gray-200">
                        <h3 class="text-lg font-bold text-gray-800 mb-6">Quick Actions</h3>
                        <div class="space-y-3">
                            <button onclick="openModal('registerStaff')" class="w-full btn-primary text-white py-3 rounded-lg font-medium flex items-center justify-center space-x-2 hover:shadow-lg">
                                <i class="fas fa-user-plus"></i>
                                <span>Register Staff</span>
                            </button>
                            <button onclick="openModal('addLearner')" class="w-full bg-green-600 hover:bg-green-700 text-white py-3 rounded-lg font-medium flex items-center justify-center space-x-2 transition-all">
                                <i class="fas fa-user-graduate"></i>
                                <span>Enroll Learner</span>
                            </button>
                            <button onclick="showSection('school-info')" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white py-3 rounded-lg font-medium flex items-center justify-center space-x-2 transition-all">
                                <i class="fas fa-cog"></i>
                                <span>School Settings</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- School Info Section -->
            <div id="school-info-section" class="section hidden p-8">
                <div class="max-w-5xl">
                    <h2 class="text-3xl font-bold text-gray-800 mb-8">School Information</h2>

                    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-8">
                        <!-- School Badge Upload -->
                        <div class="glass rounded-xl p-8 shadow-sm border border-gray-200">
                            <h3 class="text-lg font-bold text-gray-800 mb-6">School Badge</h3>
                            <form id="badgeForm" class="flex flex-col items-center">
                                <div id="badgePreviewContainer" class="w-32 h-32 bg-blue-50 border-2 border-dashed border-blue-300 rounded-lg flex items-center justify-center mb-6 cursor-pointer hover:bg-blue-100 transition-all overflow-hidden" onclick="document.getElementById('badgeFile').click()">
                                    @if (!string.IsNullOrEmpty(schoolLogo))
                                    {
                                        <img id="badgeImg" src="@schoolLogo" alt="School Badge" class="w-full h-full object-cover rounded-lg">
                                    }
                                    else
                                    {
                                        <div id="badgePlaceholder" class="text-center text-blue-400">
                                            <i class="fas fa-image text-4xl mb-2"></i>
                                            <p class="text-sm">Click to upload</p>
                                        </div>
                                    }
                                </div>
                                <input type="file" id="badgeFile" name="badgeFile" accept="image/*" style="display: none;">
                                <p class="text-xs text-gray-500 text-center mb-4">PNG or JPG, Max 5MB</p>
                                <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white py-2 rounded-lg font-medium transition-all">
                                    Upload Badge
                                </button>
                            </form>
                        </div>

                        <!-- School Basic Info -->
                        <div class="lg:col-span-2 glass rounded-xl p-8 shadow-sm border border-gray-200">
                            <h3 class="text-lg font-bold text-gray-800 mb-6">Basic Information</h3>
                            <form id="schoolBasicForm" class="space-y-4">
                                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                                    <div>
                                        <label class="block text-sm font-semibold text-gray-700 mb-2">School Name</label>
                                        <input type="text" id="schoolName" value="@schoolName" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                                    </div>
                                    <div>
                                        <label class="block text-sm font-semibold text-gray-700 mb-2">Registration Number</label>
                                        <input type="text" id="regNumber" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                                    </div>
                                </div>
                                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                                    <div>
                                        <label class="block text-sm font-semibold text-gray-700 mb-2">Established Year</label>
                                        <input type="number" id="establishedYear" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                                    </div>
                                    <div>
                                        <label class="block text-sm font-semibold text-gray-700 mb-2">School Motto</label>
                                        <input type="text" id="schoolMotto" value="@schoolMotto" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                                    </div>
                                </div>
                                <button type="submit" class="w-full btn-primary text-white py-3 rounded-lg font-semibold mt-6 hover:shadow-lg">
                                    Save Basic Information
                                </button>
                            </form>
                        </div>
                    </div>

                    <!-- Contact Information -->
                    <div class="glass rounded-xl p-8 shadow-sm border border-gray-200 mb-8">
                        <h3 class="text-lg font-bold text-gray-800 mb-6">Contact Information</h3>
                        <form id="contactForm" class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">Email Address</label>
                                <input type="email" id="schoolEmail" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            </div>
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">Phone Number</label>
                                <input type="tel" id="schoolPhone" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            </div>
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">Physical Address</label>
                                <input type="text" id="schoolAddress" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            </div>
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">Website</label>
                                <input type="url" id="schoolWebsite" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            </div>
                            <button type="submit" class="md:col-span-2 btn-primary text-white py-3 rounded-lg font-semibold hover:shadow-lg">
                                Update Contact Information
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Grades Section -->
            <div id="grades-section" class="section hidden p-8">
                <h2 class="text-3xl font-bold text-gray-800 mb-8">Grade Management</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="gradesContainer">
                    <div class="text-center py-12 text-gray-500 col-span-full">Loading grades...</div>
                </div>
            </div>

            <!-- Learners Section -->
            <div id="learners-section" class="section hidden p-8">
                <div class="mb-8 flex items-center justify-between">
                    <h2 class="text-3xl font-bold text-gray-800">Student Management</h2>
                    <button onclick="openModal('addLearner')" class="btn-primary text-white px-6 py-3 rounded-lg font-semibold hover:shadow-lg">
                        <i class="fas fa-user-plus mr-2"></i> Enroll Student
                    </button>
                </div>

                <div class="glass rounded-xl p-6 shadow-sm border border-gray-200 overflow-x-auto">
                    <div class="mb-6 flex space-x-4">
                        <input type="search" id="learnerSearch" placeholder="Search by name, admission number..." class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <select id="classFilter" class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="">All Classes</option>
                        </select>
                    </div>

                    <table>
                        <thead>
                            <tr class="border-b-2 border-gray-200">
                                <th class="text-left py-4 px-6 font-semibold text-gray-700">Name</th>
                                <th class="text-left py-4 px-6 font-semibold text-gray-700">Admission No.</th>
                                <th class="text-left py-4 px-6 font-semibold text-gray-700">Class</th>
                                <th class="text-left py-4 px-6 font-semibold text-gray-700">Gender</th>
                                <th class="text-left py-4 px-6 font-semibold text-gray-700">Status</th>
                            </tr>
                        </thead>
                        <tbody id="learnersTableBody">
                            <tr>
                                <td colspan="5" class="text-center py-8 text-gray-500">Loading learners...</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Staff & Credentials Section -->
            <div id="staff-section" class="section hidden p-8">
                <div class="mb-8">
                    <h2 class="text-3xl font-bold text-gray-800 mb-6">Staff Management & Credentials</h2>

                    <div class="flex space-x-4 mb-8">
                        <button id="staffTab" class="tab-button active text-gray-700 font-semibold pb-3 px-4">All Staff</button>
                        <button id="credentialsTab" class="tab-button text-gray-700 font-semibold pb-3 px-4">Create Credentials</button>
                    </div>

                    <!-- Staff List -->
                    <div id="staffContent" class="glass rounded-xl p-6 shadow-sm border border-gray-200">
                        <div class="mb-6 flex items-center justify-between">
                            <input type="search" id="staffSearch" placeholder="Search staff..." class="flex-1 px-4 py-2 border border-gray-300 rounded-lg mr-4">
                            <button onclick="openModal('registerStaff')" class="btn-primary text-white px-6 py-2 rounded-lg font-medium">
                                <i class="fas fa-user-plus mr-2"></i> Register Staff
                            </button>
                        </div>

                        <table>
                            <thead>
                                <tr class="border-b-2 border-gray-200">
                                    <th class="text-left py-4 px-6 font-semibold text-gray-700">Name</th>
