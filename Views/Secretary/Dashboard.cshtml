@{
    Layout = null;
    var schoolName = ViewData["SchoolName"]?.ToString() ?? "School";
    var secretaryEmail = ViewData["SecretaryEmail"]?.ToString() ?? "Secretary";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="@Html.AntiForgeryToken()">
    <title>Secretary Dashboard - @schoolName</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet">
    <style>
        * { box-sizing: border-box; margin: 0; padding: 0; }
        
        :root {
            --primary: #3B82F6;
            --primary-hover: #2563EB;
            --primary-soft: #EFF6FF;
            --success: #10B981;
            --success-soft: #D1FAE5;
            --warning: #F59E0B;
            --warning-soft: #FEF3C7;
            --danger: #EF4444;
            --danger-soft: #FEE2E2;
            --bg: #F1F5F9;
            --surface: #FFFFFF;
            --border: #E2E8F0;
            --text-main: #0F172A;
            --text-muted: #64748B;
            --accent: #8B5CF6;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--bg);
            color: var(--text-main);
            min-height: 100vh;
        }

        .top-nav {
            background: var(--surface);
            border-bottom: 2px solid var(--border);
            padding: 16px 32px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 2px 8px rgba(0,0,0,0.04);
        }

        .nav-logo {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .nav-logo-icon {
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, var(--primary), var(--accent));
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 28px;
        }

        .nav-logo-text h2 {
            font-size: 1.2rem;
            font-weight: 800;
        }

        .nav-logo-text span {
            font-size: 0.75rem;
            color: var(--text-muted);
        }

        .nav-right {
            display: flex;
            align-items: center;
            gap: 16px;
        }

        .logout-btn {
            padding: 8px 16px;
            background: var(--danger-soft);
            color: var(--danger);
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s;
        }

        .logout-btn:hover {
            background: var(--danger);
            color: white;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 32px 24px;
        }

        .dashboard-tabs {
            display: flex;
            gap: 12px;
            margin-bottom: 32px;
            border-bottom: 2px solid var(--border);
            overflow-x: auto;
        }

        .tab-btn {
            padding: 12px 24px;
            background: none;
            border: none;
            border-bottom: 3px solid transparent;
            cursor: pointer;
            font-weight: 600;
            color: var(--text-muted);
            transition: all 0.3s;
            white-space: nowrap;
        }

        .tab-btn.active {
            color: var(--primary);
            border-bottom-color: var(--primary);
        }

        .tab-content {
            display: none;
        }

        .tab-content.active {
            display: block;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 32px;
        }

        .stat-card {
            background: var(--surface);
            border: 2px solid var(--border);
            border-radius: 14px;
            padding: 24px;
            text-align: center;
        }

        .stat-value {
            font-size: 2.2rem;
            font-weight: 900;
            color: var(--primary);
            margin: 12px 0;
        }

        .stat-label {
            color: var(--text-muted);
            font-weight: 600;
            font-size: 0.9rem;
        }

        .card {
            background: var(--surface);
            border: 2px solid var(--border);
            border-radius: 16px;
            padding: 24px;
            margin-bottom: 20px;
        }

        .card-title {
            font-size: 1.2rem;
            font-weight: 800;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        table thead {
            background: var(--primary-soft);
        }

        table th {
            padding: 14px;
            text-align: left;
            font-weight: 700;
            color: var(--primary);
            font-size: 0.85rem;
        }

        table td {
            padding: 14px;
            border-top: 1px solid var(--border);
        }

        table tbody tr:hover {
            background: var(--bg);
        }

        .badge {
            display: inline-block;
            padding: 4px 10px;
            border-radius: 6px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .badge-success {
            background: var(--success-soft);
            color: var(--success);
        }

        .badge-warning {
            background: var(--warning-soft);
            color: var(--warning);
        }

        .badge-danger {
            background: var(--danger-soft);
            color: var(--danger);
        }

        .btn {
            padding: 8px 16px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 600;
            font-size: 0.85rem;
            transition: all 0.3s;
        }

        .btn-primary {
            background: var(--primary);
            color: white;
        }

        .btn-primary:hover {
            background: var(--primary-hover);
        }

        .search-bar {
            display: flex;
            gap: 12px;
            margin-bottom: 20px;
            flex-wrap: wrap;
        }

        .search-bar input,
        .search-bar select {
            padding: 10px 14px;
            border: 2px solid var(--border);
            border-radius: 8px;
            font-family: 'Inter', sans-serif;
            font-size: 0.9rem;
        }

        .search-bar input:focus,
        .search-bar select:focus {
            outline: none;
            border-color: var(--primary);
        }

        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0,0,0,0.5);
            align-items: center;
            justify-content: center;
            z-index: 1000;
        }

        .modal.show {
            display: flex;
        }

        .modal-content {
            background: var(--surface);
            border-radius: 16px;
            padding: 32px;
            max-width: 500px;
            width: 100%;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        }

        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 24px;
            padding-bottom: 16px;
            border-bottom: 2px solid var(--border);
        }

        .modal-header h2 {
            font-size: 1.5rem;
            font-weight: 800;
        }

        .close-btn {
            background: none;
            border: none;
            font-size: 28px;
            cursor: pointer;
            color: var(--text-muted);
        }

        .form-group {
            margin-bottom: 16px;
        }

        .form-group label {
            display: block;
            font-weight: 600;
            margin-bottom: 8px;
            color: var(--text-main);
        }

        .form-group input,
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 10px 12px;
            border: 2px solid var(--border);
            border-radius: 8px;
            font-family: 'Inter', sans-serif;
            transition: all 0.3s;
        }

        .form-group input:focus,
        .form-group select:focus,
        .form-group textarea:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px var(--primary-soft);
        }

        .toast {
            position: fixed;
            bottom: 20px;
            right: 20px;
            padding: 16px 20px;
            border-radius: 8px;
            color: white;
            z-index: 2000;
            animation: slideUp 0.3s ease;
        }

        .toast.success {
            background: var(--success);
        }

        .toast.error {
            background: var(--danger);
        }

        @@keyframes slideUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        @@media print {
            .top-nav, .dashboard-tabs, .search-bar, .btn:not(.btn-primary), .logout-btn {
                display: none;
            }
            body { background: white; }
            .card { box-shadow: none; border: 1px solid #ccc; }
        }

        @@media (max-width: 768px) {
            .stats-grid { grid-template-columns: 1fr; }
            table { font-size: 0.85rem; }
            table th, table td { padding: 10px; }
        }
    </style>
</head>
<body>
    <!-- TOP NAVIGATION -->
    <div class="top-nav">
        <div class="nav-logo">
            <div class="nav-logo-icon">üè´</div>
            <div class="nav-logo-text">
                <h2>@schoolName</h2>
                <span>Secretary Dashboard</span>
            </div>
        </div>
        
        <div class="nav-right">
            <span style="font-weight: 600;">@secretaryEmail</span>
            <form method="post" asp-action="Logout" asp-controller="Secretary" asp-route-schoolName="@schoolName" style="display: inline;">
                @Html.AntiForgeryToken()
                <button type="submit" class="logout-btn">Logout</button>
            </form>
        </div>
    </div>

    <!-- CONTAINER -->
    <div class="container">
        <!-- TABS -->
        <div class="dashboard-tabs">
            <button class="tab-btn active" onclick="switchTab('dashboard')">
                <span class="material-icons-round" style="vertical-align: middle; font-size: 20px; margin-right: 6px;">dashboard</span>
                Dashboard
            </button>
            <button class="tab-btn" onclick="switchTab('fees')">
                <span class="material-icons-round" style="vertical-align: middle; font-size: 20px; margin-right: 6px;">payments</span>
                Fee Management
            </button>
            <button class="tab-btn" onclick="switchTab('budget')">
                <span class="material-icons-round" style="vertical-align: middle; font-size: 20px; margin-right: 6px;">bar_chart</span>
                Budget
            </button>
        </div>

        <!-- DASHBOARD TAB -->
        <div id="dashboard-tab" class="tab-content active">
            <div class="stats-grid">
                <div class="stat-card">
                    <div style="color: var(--primary); font-size: 28px;">üí∞</div>
                    <div class="stat-label">Total Collections</div>
                    <div class="stat-value" id="totalCollected">0</div>
                </div>
                <div class="stat-card">
                    <div style="color: var(--success); font-size: 28px;">‚úÖ</div>
                    <div class="stat-label">Paid Students</div>
                    <div class="stat-value" id="paidStudents">0</div>
                </div>
                <div class="stat-card">
                    <div style="color: var(--warning); font-size: 28px;">‚è≥</div>
                    <div class="stat-label">Pending Amount</div>
                    <div class="stat-value" id="pendingAmount">0</div>
                </div>
                <div class="stat-card">
                    <div style="color: #3B82F6; font-size: 28px;">üë•</div>
                    <div class="stat-label">Total Students</div>
                    <div class="stat-value" id="totalStudents">0</div>
                </div>
            </div>
        </div>

        <!-- FEES TAB -->
        <div id="fees-tab" class="tab-content">
            <div class="card">
                <div class="card-title">
                    <span class="material-icons-round">payment</span>
                    Student Fee Status
                </div>
                <div class="search-bar">
                    <input type="text" id="studentSearch" placeholder="Search student..." onkeyup="filterStudents()">
                    <button class="btn btn-primary" onclick="openPaymentModal()">
                        <span class="material-icons-round" style="vertical-align: middle;">add</span>
                        Record Payment
                    </button>
                </div>
                <table>
                    <thead>
                        <tr>
                            <th>Student Name</th>
                            <th>Account No</th>
                            <th>Grade</th>
                            <th>Total Fee</th>
                            <th>Paid</th>
                            <th>Balance</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody id="feesTable">
                        <tr><td colspan="8" style="text-align: center; padding: 40px;">Loading...</td></tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- BUDGET TAB -->
        <div id="budget-tab" class="tab-content">
            <div class="card">
                <div class="card-title">
                    <span class="material-icons-round">bar_chart</span>
                    School Budget Report
                </div>
                <button class="btn btn-primary" onclick="printBudget()">
                    <span class="material-icons-round" style="vertical-align: middle;">print</span>
                    Print Budget
                </button>
                <table>
                    <thead>
                        <tr>
                            <th>Grade</th>
                            <th>Students</th>
                            <th>Term Fee</th>
                            <th>Expected Revenue</th>
                            <th>Collected</th>
                            <th>Pending</th>
                        </tr>
                    </thead>
                    <tbody id="budgetTable">
                        <tr><td colspan="6" style="text-align: center; padding: 40px;">Loading...</td></tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- PAYMENT MODAL -->
    <div id="paymentModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Record Payment</h2>
                <button class="close-btn" onclick="closePaymentModal()">√ó</button>
            </div>
            <form onsubmit="submitPayment(event)">
                <div class="form-group">
                    <label>Student</label>
                    <select id="studentSelect" required>
                        <option value="">Select Student...</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Amount (KES)</label>
                    <input type="number" id="amount" min="0" step="100" required placeholder="Enter amount">
                </div>
                <div class="form-group">
                    <label>Payment Method</label>
                    <select id="paymentMethod">
                        <option value="Cash">Cash</option>
                        <option value="Bank Transfer">Bank Transfer</option>
                        <option value="M-Pesa">M-Pesa</option>
                        <option value="Check">Check</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Reference</label>
                    <input type="text" id="reference" placeholder="Transaction reference...">
                </div>
                <div style="display: flex; gap: 12px; margin-top: 24px;">
                    <button type="button" class="btn" onclick="closePaymentModal()" style="flex: 1; background: var(--border); color: var(--text-main);">Cancel</button>
                    <button type="submit" class="btn btn-primary" style="flex: 1;">Record Payment</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        const schoolName = '@schoolName';
        let allStudents = [];
        let studentsData = [];

        // Initialize
        window.addEventListener('DOMContentLoaded', () => {
            loadDashboardStats();
            loadStudentsFees();
            loadBudget();
        });

        function switchTab(tabName) {
            document.querySelectorAll('.tab-content').forEach(t => t.classList.remove('active'));
            document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
            document.getElementById(tabName + '-tab').classList.add('active');
            event.target.closest('.tab-btn')?.classList.add('active');
        }

        async function loadDashboardStats() {
            try {
                const response = await fetch(`/${schoolName}/secretary/api/dashboard-stats`);
                const data = await response.json();
                
                if (data.success) {
                    document.getElementById('totalCollected').textContent = 'KES ' + (data.totalCollected / 1000).toFixed(1) + 'K';
                    document.getElementById('paidStudents').textContent = data.paidStudents;
                    document.getElementById('pendingAmount').textContent = 'KES ' + (data.pendingAmount / 1000).toFixed(1) + 'K';
                    document.getElementById('totalStudents').textContent = data.totalStudents;
                }
            } catch (error) {
                console.error('Error loading stats:', error);
            }
        }

        async function loadStudentsFees() {
            try {
                const response = await fetch(`/${schoolName}/secretary/api/students-fees`);
                const data = await response.json();
                
                if (data.success) {
                    studentsData = data.students;
                    allStudents = data.students;
                    renderFeesTable();
                    populateStudentSelect();
                }
            } catch (error) {
                console.error('Error loading students:', error);
            }
        }

        function renderFeesTable() {
            const tbody = document.getElementById('feesTable');
            tbody.innerHTML = studentsData.map(s => `
                <tr>
                    <td><strong>${s.fullName}</strong></td>
                    <td>${s.accountNo}</td>
                    <td>${s.grade}</td>
                    <td>KES ${s.totalFee.toLocaleString()}</td>
                    <td>KES ${s.amountPaid.toLocaleString()}</td>
                    <td style="color: ${s.balance > 0 ? '#EF4444' : '#10B981'}; font-weight: 600;">KES ${s.balance.toLocaleString()}</td>
                    <td><span class="badge badge-${s.paymentStatus === 'Paid' ? 'success' : s.paymentStatus === 'Pending' ? 'danger' : 'warning'}">${s.paymentStatus}</span></td>
                    <td><button class="btn btn-primary" onclick="recordPaymentFor(${s.id})">Pay</button></td>
                </tr>
            `).join('');
        }

        function populateStudentSelect() {
            const select = document.getElementById('studentSelect');
            select.innerHTML = '<option value="">Select Student...</option>';
            allStudents.forEach(s => {
                const opt = document.createElement('option');
                opt.value = s.id;
                opt.textContent = `${s.fullName} (${s.accountNo}) - Balance: KES ${s.balance}`;
                select.appendChild(opt);
            });
        }

        function filterStudents() {
            const search = document.getElementById('studentSearch').value.toLowerCase();
            studentsData = allStudents.filter(s => 
                s.fullName.toLowerCase().includes(search) || 
                s.accountNo.includes(search)
            );
            renderFeesTable();
        }

        function openPaymentModal() {
            document.getElementById('paymentModal').classList.add('show');
        }

        function recordPaymentFor(studentId) {
            document.getElementById('studentSelect').value = studentId;
            openPaymentModal();
        }

        function closePaymentModal() {
            document.getElementById('paymentModal').classList.remove('show');
        }

        async function submitPayment(e) {
            e.preventDefault();
            
            const studentId = parseInt(document.getElementById('studentSelect').value);
            const amount = parseFloat(document.getElementById('amount').value);
            const method = document.getElementById('paymentMethod').value;
            const reference = document.getElementById('reference').value;

            try {
                const response = await fetch(`/${schoolName}/secretary/api/record-payment`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                    },
                    body: JSON.stringify({ studentId, amount, paymentMethod: method, reference })
                });

                const data = await response.json();
                
                if (data.success) {
                    showToast('Payment recorded successfully', 'success');
                    closePaymentModal();
                    loadStudentsFees();
                    loadDashboardStats();
                    document.querySelector('form')?.reset();
                } else {
                    showToast(data.message || 'Failed to record payment', 'error');
                }
            } catch (error) {
                console.error('Error recording payment:', error);
                showToast('Error recording payment', 'error');
            }
        }

        async function loadBudget() {
            try {
                const response = await fetch(`/${schoolName}/secretary/api/budget`);
                const data = await response.json();
                
                if (data.success) {
                    renderBudgetTable(data.budgetData);
                }
            } catch (error) {
                console.error('Error loading budget:', error);
            }
        }

        function renderBudgetTable(budgetData) {
            const tbody = document.getElementById('budgetTable');
            let totalExpected = 0, totalCollected = 0, totalPending = 0;

            const rows = budgetData.map(b => {
                totalExpected += b.expectedRevenue;
                totalCollected += b.collectedRevenue;
                totalPending += b.pendingRevenue;
                return `
                    <tr>
                        <td><strong>${b.grade}</strong></td>
                        <td>${b.studentCount}</td>
                        <td>KES ${b.termFee.toLocaleString()}</td>
                        <td>KES ${b.expectedRevenue.toLocaleString()}</td>
                        <td style="color: #10B981; font-weight: 600;">KES ${b.collectedRevenue.toLocaleString()}</td>
                        <td style="color: #EF4444; font-weight: 600;">KES ${b.pendingRevenue.toLocaleString()}</td>
                    </tr>
                `;
            });

            rows.push(`
                <tr style="background: #F1F5F9; font-weight: 700; border-top: 2px solid #E2E8F0;">
                    <td colspan="3">TOTAL</td>
                    <td>KES ${totalExpected.toLocaleString()}</td>
                    <td style="color: #10B981;">KES ${totalCollected.toLocaleString()}</td>
                    <td style="color: #EF4444;">KES ${totalPending.toLocaleString()}</td>
                </tr>
            `);

            tbody.innerHTML = rows.join('');
        }

        function printBudget() {
            window.print();
        }

        function showToast(message, type = 'success') {
            const toast = document.createElement('div');
            toast.className = `toast ${type}`;
            toast.textContent = message;
            document.body.appendChild(toast);
            setTimeout(() => toast.remove(), 3000);
        }
    </script>
</body>
</html>